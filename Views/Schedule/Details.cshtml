@model DigitalSignage.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@Model.ScheduleName</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Edit" asp-route-id="@Model.ScheduleID" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.ScheduleID" class="btn btn-danger">Delete</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department?.DepartmentName</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3">Recurring</dt>
                <dd class="col-sm-9">
                    @if (Model.IsRecurring)
                    {
                        <span class="badge bg-warning">Yes</span>
                        @if (!string.IsNullOrEmpty(Model.RecurrencePattern))
                        {
                            <div class="mt-1"><small>Pattern: @Model.RecurrencePattern</small></div>
                        }
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        </div>
    </div>

    @if (Model.SchedulePages != null && Model.SchedulePages.Any())
    {
        <div class="card mt-3">
            <div class="card-header">
                <h5>Scheduled Pages</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Page</th>
                            <th>Duration (seconds)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sp in Model.SchedulePages.OrderBy(x => x.DisplayOrder))
                        {
                            <tr>
                                <td>@sp.DisplayOrder</td>
                                <td>@sp.Page?.PageName</td>
                                <td>@sp.DisplayDuration</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-3">
        <button type="button" class="btn btn-secondary" data-smart-back="@ViewBag.BreadcrumbBackUrl">Back to List</button>
    </div>
</div>
