@model IEnumerable<DigitalSignage.Models.Schedule>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("schedule.title");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@T("schedule.title")</h2>
        <p class="text-muted mb-0">@T("schedule.subtitle")</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm" asp-route-departmentId="@ViewBag.DepartmentId">
        <i class="fas fa-calendar-plus me-2"></i> @T("schedule.newSchedule")
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">@T("schedule.scheduleName")</th>
                        <th>@T("schedule.startDate")</th>
                        <th>@T("schedule.endDate")</th>
                        <th>@T("schedule.timeRange")</th>
                        <th>@T("common.status")</th>
                        <th class="text-end pe-4">@T("common.actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.ScheduleName</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                                </span>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">@T("common.active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">@T("common.inactive")</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                     <a asp-action="Edit" asp-route-id="@item.ScheduleID" class="btn btn-sm btn-outline-warning btn-icon" title="@T("common.edit")">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                     <a asp-action="Delete" asp-route-id="@item.ScheduleID" class="btn btn-sm btn-outline-danger btn-icon" title="@T("common.delete")">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                     @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-calendar-times fa-3x mb-3 opacity-50"></i>
                                <p>@T("schedule.noSchedules")</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
