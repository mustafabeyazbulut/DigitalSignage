@model IEnumerable<DigitalSignage.Models.Content>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("content.title");

    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var sortBy = ViewBag.SortBy as string ?? "";
    var sortOrder = ViewBag.SortOrder as string ?? "asc";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@T("content.title")</h1>
            <p class="text-muted mb-0">@T("content.subtitle")</p>
        </div>
        <div class="col-md-4 text-end">
            @if (ViewBag.CanEdit == true || ViewBag.IsSystemAdmin == true || ViewBag.IsCompanyAdmin == true)
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> @T("content.uploadMedia")
                </a>
            }
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="@T("common.search")..." value="@searchTerm">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">@T("common.search")</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>@T("content.preview")</th>
                            <th>
                                <a href="?search=@searchTerm&sortBy=ContentTitle&sortOrder=@(sortBy == "ContentTitle" && sortOrder == "asc" ? "desc" : "asc")" class="text-white text-decoration-none">
                                    @T("content.title")
                                    @if (sortBy == "ContentTitle")
                                    {
                                        <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="?search=@searchTerm&sortBy=ContentType&sortOrder=@(sortBy == "ContentType" && sortOrder == "asc" ? "desc" : "asc")" class="text-white text-decoration-none">
                                    @T("content.type")
                                    @if (sortBy == "ContentType")
                                    {
                                        <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>@T("content.path")</th>
                            <th>@T("common.actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="content-preview">
                                        @if(item.ContentType == "Image")
                                        {
                                            <img src="@item.MediaPath" alt="@item.ContentTitle" />
                                        }
                                        else if (item.ContentType == "Video")
                                        {
                                            <i class="bi bi-play-circle"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-code-square"></i>
                                        }
                                    </div>
                                </td>
                                <td>@item.ContentTitle</td>
                                <td>
                                    <span class="type-badge @item.ContentType.ToLower()">
                                        @if(item.ContentType == "Image")
                                        {
                                            <i class="bi bi-image"></i>
                                        }
                                        else if (item.ContentType == "Video")
                                        {
                                            <i class="bi bi-play-btn"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-code"></i>
                                        }
                                        @item.ContentType
                                    </span>
                                </td>
                                <td><code>@item.MediaPath</code></td>
                                <td class="table-actions">
                                    <div class="action-dropdown">
                                        <button type="button" class="action-dropdown-toggle" title="@T("common.actions")">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="action-dropdown-menu">
                                            <a asp-action="Details" asp-route-id="@item.ContentID" class="action-dropdown-item action-view">
                                                <i class="bi bi-eye"></i>
                                                <span>@T("common.details")</span>
                                            </a>
                                            @if (ViewBag.CanEdit == true)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.ContentID" asp-route-returnUrl="@Url.Action("Index")" class="action-dropdown-item action-edit">
                                                    <i class="bi bi-pencil"></i>
                                                    <span>@T("common.edit")</span>
                                                </a>
                                            }
                                            @if (ViewBag.CanDelete == true)
                                            {
                                                <div class="action-dropdown-divider"></div>
                                                <a asp-action="Delete" asp-route-id="@item.ContentID" class="action-dropdown-item action-delete">
                                                    <i class="bi bi-trash"></i>
                                                    <span>@T("common.delete")</span>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@(currentPage - 1)">
                            @T("common.previous")
                        </a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@(currentPage + 1)">
                            @T("common.next")
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="table-empty-state">
            <i class="bi bi-camera-video"></i>
            <h3>@T("content.emptyLibrary")</h3>
            <p>@T("content.uploadFirst")</p>
        </div>
    }
</div>
