@model IEnumerable<DigitalSignage.Models.Content>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("content.title");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@T("content.title")</h2>
        <p class="text-muted mb-0">@T("content.subtitle")</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-cloud-upload-alt me-2"></i> @T("content.uploadMedia")
    </a>
</div>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-img-top bg-dark d-flex align-items-center justify-content-center" style="height: 150px; overflow: hidden;">
                    @if(item.ContentType == "Image") {
                        <img src="@item.MediaPath" alt="@item.ContentTitle" class="img-fluid" style="object-fit: cover; min-height: 100%;" />
                    } else if (item.ContentType == "Video") {
                        <i class="fas fa-play-circle fa-3x text-white"></i>
                    } else {
                        <i class="fas fa-code fa-3x text-white opacity-50"></i>
                    }
                </div>
                <div class="card-body">
                    <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill mb-2">@item.ContentType</span>
                    <h6 class="card-title fw-bold text-truncate" title="@item.ContentTitle">@item.ContentTitle</h6>
                </div>
                <div class="card-footer bg-white border-top-0 pt-0 pb-3 px-3">
                    <div class="btn-group w-100">
                        <a asp-action="Edit" asp-route-id="@item.ContentID" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-pen"></i> @T("common.edit")
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ContentID" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="text-center py-5 text-muted bg-white rounded border border-dashed">
                <i class="fas fa-photo-video fa-3x mb-3 opacity-50"></i>
                <p class="fs-5">@T("content.emptyLibrary")</p>
                <a asp-action="Create" class="btn btn-sm btn-primary mt-2">@T("content.uploadFirst")</a>
            </div>
        </div>
    }
</div>
