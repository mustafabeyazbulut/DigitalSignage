@model IEnumerable<DigitalSignage.Models.Content>

@{
    ViewData["Title"] = "Media Library";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">Media Library</h2>
        <p class="text-muted mb-0">Upload and manage images, videos, and HTML content.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm" asp-route-departmentId="@ViewBag.DepartmentId">
        <i class="fas fa-cloud-upload-alt me-2"></i> Upload Media
    </a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 content-card">
                 <!-- Preview -->
                <div class="card-img-top bg-dark d-flex align-items-center justify-content-center overflow-hidden position-relative" style="height: 150px;">
                    @if(item.ContentType == "Content" || item.ContentType == "Image") {
                         <img src="@item.MediaPath" class="img-fluid w-100 h-100" style="object-fit: cover;" onerror="this.src='https://via.placeholder.com/150?text=Image';" />
                    }
                    else if(item.ContentType == "Video") {
                        <i class="fas fa-play-circle fa-3x text-white opacity-75"></i>
                         <video src="@item.MediaPath" class="d-none"></video>
                    }
                    else {
                        <i class="fas fa-file-code fa-3x text-white opacity-50"></i>
                    }
                     <span class="position-absolute bottom-0 end-0 badge bg-dark bg-opacity-75 m-2 small">@item.ContentType</span>
                </div>
                
                <div class="card-body p-3">
                    <h6 class="card-title fw-bold text-truncate mb-1" title="@item.ContentTitle">@item.ContentTitle</h6>
                    <p class="card-text text-muted small user-select-none mb-2">Used in 3 pages</p>
                </div>
                 <div class="card-footer bg-white border-top-0 pt-0 pb-3 px-3">
                     <div class="btn-group w-100">
                         <a asp-action="Edit" asp-route-id="@item.ContentID" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-pen"></i>
                        </a>
                         <a asp-action="Delete" asp-route-id="@item.ContentID" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
     @if (!Model.Any())
    {
        <div class="col-12">
            <div class="text-center py-5 text-muted bg-white rounded border border-dashed">
                <i class="fas fa-photo-video fa-3x mb-3 opacity-50"></i>
                <p class="fs-5">Library is empty.</p>
                <a asp-action="Create" class="btn btn-sm btn-primary mt-2">Upload your first file</a>
            </div>
        </div>
    }
</div>

<style>
    .content-card:hover .card-img-top img {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }
</style>
