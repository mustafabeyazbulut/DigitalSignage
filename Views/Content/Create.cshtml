@model DigitalSignage.Models.Content

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("content.createTitle");
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">@T("content.createTitle")</h2>
            <button type="button" class="btn btn-outline-secondary" data-smart-back="@ViewBag.DefaultReturnUrl">
                <i class="fas fa-arrow-left me-2"></i> @T("content.backToLibrary")
            </button>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                         <label asp-for="DepartmentID" class="form-label fw-bold">@T("dashboard.department")</label>
                         @if(ViewBag.Departments != null)
                         {
                            <select asp-for="DepartmentID" class="form-select" asp-items="@(new SelectList(ViewBag.Departments, "DepartmentID", "DepartmentName"))">
                                <option value="">@T("content.selectDepartment")</option>
                            </select>
                         }
                         else
                         {
                             <input type="hidden" asp-for="DepartmentID" value="@ViewBag.DepartmentId" />
                             <input type="text" class="form-control" value="@T("content.currentDepartment")" disabled />
                         }
                    </div>

                    <h5 class="text-primary fw-bold mb-3"><i class="fas fa-photo-video me-2"></i> @T("content.contentType")</h5>
                    <div class="btn-group w-100 mb-4" role="group">
                        <input type="radio" class="btn-check" name="ContentType" value="Image" id="ctImage" checked>
                        <label class="btn btn-outline-primary" for="ctImage"><i class="fas fa-image me-2"></i> @T("content.image")</label>

                        <input type="radio" class="btn-check" name="ContentType" value="Video" id="ctVideo">
                        <label class="btn btn-outline-primary" for="ctVideo"><i class="fas fa-video me-2"></i> @T("content.video")</label>

                        <input type="radio" class="btn-check" name="ContentType" value="Text" id="ctText">
                        <label class="btn btn-outline-primary" for="ctText"><i class="fas fa-code me-2"></i> @T("content.textHtml")</label>
                    </div>

                    <!-- File Upload Section -->
                    <div id="fileUploadSection" class="mb-3">
                        <label class="form-label fw-bold">@T("content.fileUpload")</label>
                        <input type="file" name="mediaFile" class="form-control" accept="image/*" />
                        <div class="form-text">@T("content.fileFormats")</div>
                    </div>

                    <!-- Text/HTML Section -->
                    <div id="textContentSection" class="mb-3 d-none">
                        <label class="form-label fw-bold">@T("content.htmlContent")</label>
                        <textarea asp-for="ContentData" class="form-control" rows="6" placeholder="@T("content.htmlPlaceholder")"></textarea>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="ContentTitle" class="form-label fw-bold">@T("content.contentTitle")</label>
                            <input asp-for="ContentTitle" class="form-control" placeholder="@T("content.contentTitlePlaceholder")" />
                            <span asp-validation-for="ContentTitle" class="text-danger small"></span>
                        </div>
                         <div class="col-md-4">
                            <label asp-for="DurationSeconds" class="form-label fw-bold">@T("content.duration")</label>
                            <input asp-for="DurationSeconds" type="number" min="1" class="form-control" value="10" />
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-cloud-upload-alt me-2"></i> @T("content.uploadSave")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('input[name="ContentType"]').change(function() {
                if(this.value === 'Text') {
                    $('#fileUploadSection').addClass('d-none');
                    $('#textContentSection').removeClass('d-none');
                } else {
                    $('#fileUploadSection').removeClass('d-none');
                    $('#textContentSection').addClass('d-none');
                    if(this.value === 'Image') $('input[name="mediaFile"]').attr('accept', 'image/*');
                    if(this.value === 'Video') $('input[name="mediaFile"]').attr('accept', 'video/*');
                }
            });
        });
    </script>
}
