@model DigitalSignage.Models.Content

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("content.deleteTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-danger">@T("content.deleteTitle")</h1>

            <div class="alert alert-danger">
                <h4>@T("content.deleteWarning")</h4>
                <p>@T("content.deleteAffects")</p>
                <p><strong>@T("common.cannotUndo")</strong></p>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@T("content.contentTitle")</dt>
                        <dd class="col-sm-8">@(Model.ContentTitle ?? "Untitled")</dd>

                        <dt class="col-sm-4">@T("content.contentType")</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.ContentType</span>
                        </dd>

                        <dt class="col-sm-4">@T("dashboard.department")</dt>
                        <dd class="col-sm-8">
                            @if (Model.Department != null)
                            {
                                @Model.Department.DepartmentName
                            }
                            else
                            {
                                <span>@T("department.departmentID"): @Model.DepartmentID</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.MediaPath))
                        {
                            <dt class="col-sm-4">@T("content.mediaPath")</dt>
                            <dd class="col-sm-8"><code>@Model.MediaPath</code></dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.ContentData))
                        {
                            <dt class="col-sm-4">@T("content.contentData")</dt>
                            <dd class="col-sm-8">
                                <div class="text-muted small" style="max-height: 100px; overflow-y: auto;">
                                    @Model.ContentData
                                </div>
                            </dd>
                        }

                        <dt class="col-sm-4">@T("common.preview")</dt>
                        <dd class="col-sm-8">
                            @if (Model.ContentType == "Image" && !string.IsNullOrEmpty(Model.MediaPath))
                            {
                                <img src="/media/@Model.MediaPath" alt="@Model.ContentTitle" class="img-thumbnail" style="max-height: 150px;" />
                            }
                            else if (Model.ContentType == "Video" && !string.IsNullOrEmpty(Model.MediaPath))
                            {
                                <video controls style="max-width: 100%; max-height: 150px;">
                                    <source src="/media/@Model.MediaPath" />
                                </video>
                            }
                            else if (Model.ContentType == "PDF" && !string.IsNullOrEmpty(Model.MediaPath))
                            {
                                <i class="bi bi-file-earmark-pdf fs-1 text-danger"></i>
                                <span class="ms-2">PDF</span>
                            }
                            else if (Model.ContentType == "URL" && !string.IsNullOrEmpty(Model.ContentData))
                            {
                                <i class="bi bi-link-45deg fs-4"></i>
                                <a href="@Model.ContentData" target="_blank" class="ms-1">@Model.ContentData</a>
                            }
                            else
                            {
                                <span class="text-muted">@Model.ContentType @T("content.text") - @T("common.noPreview")</span>
                            }
                        </dd>

                        <dt class="col-sm-4">@T("content.createdBy")</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>

                        <dt class="col-sm-4">@T("common.status")</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? T("common.active") : T("common.inactive"))
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="ContentID" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> @T("common.confirmDelete")
                </button>
                <a asp-action="Index" class="btn btn-secondary">@T("common.cancel")</a>
            </form>
        </div>
    </div>
</div>
