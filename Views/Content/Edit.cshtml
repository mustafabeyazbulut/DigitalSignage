@model DigitalSignage.Models.Content

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("content.editTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h1>@T("content.editTitle")</h1>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ContentID" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="MediaPath" />
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="DepartmentID" class="form-label fw-bold">@T("dashboard.department")</label>
                            <select asp-for="DepartmentID" class="form-select" asp-items="@(new SelectList(ViewBag.Departments, "DepartmentID", "DepartmentName"))" disabled>
                            </select>
                            <input type="hidden" asp-for="DepartmentID" />
                            <div class="form-text">@T("content.departmentCannotChange")</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContentTitle" class="form-label fw-bold">@T("content.contentTitle")</label>
                                    <input asp-for="ContentTitle" class="form-control" />
                                    <span asp-validation-for="ContentTitle" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContentType" class="form-label fw-bold">@T("content.contentType")</label>
                                    <select asp-for="ContentType" class="form-select" disabled>
                                        <option value="Text">@T("content.text")</option>
                                        <option value="Image">@T("content.image")</option>
                                        <option value="Video">@T("content.video")</option>
                                        <option value="HTML">@T("content.html")</option>
                                        <option value="PDF">@T("content.pdf")</option>
                                        <option value="URL">@T("content.url")</option>
                                    </select>
                                    <input type="hidden" asp-for="ContentType" />
                                    <div class="form-text">@T("content.contentTypeCannotChange")</div>
                                </div>
                            </div>
                        </div>

                        @if (Model.ContentType == "URL")
                        {
                            <div class="mb-3">
                                <label asp-for="ContentData" class="form-label fw-bold">@T("content.url")</label>
                                <input asp-for="ContentData" type="url" class="form-control" placeholder="@T("content.urlPlaceholder")" />
                                <div class="form-text">@T("content.urlHelp")</div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label asp-for="ContentData" class="form-label">@T("content.contentData")</label>
                                <textarea asp-for="ContentData" class="form-control" rows="5"></textarea>
                                <div class="form-text">@T("content.contentDataHelp")</div>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">@T("content.currentMediaFile")</label>
                            <div class="card bg-light">
                                <div class="card-body">
                                    @if (Model.ContentType == "Image" && !string.IsNullOrEmpty(Model.MediaPath))
                                    {
                                        <img src="@Model.MediaPath" alt="@Model.ContentTitle" class="img-thumbnail" style="max-height: 200px;" />
                                    }
                                    else if (Model.ContentType == "Video" && !string.IsNullOrEmpty(Model.MediaPath))
                                    {
                                        <video controls style="max-width: 100%; max-height: 200px;">
                                            <source src="@Model.MediaPath" />
                                        </video>
                                    }
                                    else if (Model.ContentType == "PDF" && !string.IsNullOrEmpty(Model.MediaPath))
                                    {
                                        <embed src="@Model.MediaPath" type="application/pdf" width="100%" height="300px" />
                                    }
                                    else if (Model.ContentType == "URL" && !string.IsNullOrEmpty(Model.ContentData))
                                    {
                                        <div class="border rounded p-2">
                                            <i class="fas fa-link me-2"></i>
                                            <a href="@Model.ContentData" target="_blank">@Model.ContentData</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">@T("content.noMediaFile")</p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.MediaPath))
                                    {
                                        <p class="small text-muted mt-2 mb-0">@Model.MediaPath</p>
                                    }
                                </div>
                            </div>
                        </div>

                        @if (Model.ContentType != "URL")
                        {
                            <div class="mb-3">
                                <label class="form-label">@T("content.replaceMediaFile")</label>
                                @if (Model.ContentType == "PDF")
                                {
                                    <input type="file" name="file" class="form-control" accept=".pdf" />
                                }
                                else if (Model.ContentType == "Image")
                                {
                                    <input type="file" name="file" class="form-control" accept="image/*" />
                                }
                                else if (Model.ContentType == "Video")
                                {
                                    <input type="file" name="file" class="form-control" accept="video/*" />
                                }
                                else
                                {
                                    <input type="file" name="file" class="form-control" />
                                }
                                <div class="form-text">@T("common.leaveEmpty")</div>
                            </div>
                        }

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> @T("common.update")
                            </button>
                            <button type="button" class="btn btn-secondary" data-smart-back="@ViewBag.BreadcrumbBackUrl">@T("common.cancel")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
