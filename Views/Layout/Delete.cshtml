@model DigitalSignage.Models.Layout

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("layout.deleteTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-danger">@T("layout.deleteTitle")</h1>

            <div class="alert alert-danger">
                <h4>@T("layout.deleteWarning")</h4>
                <p>@T("layout.deleteAffects")</p>
                <p><strong>@T("common.cannotUndo")</strong></p>
            </div>

            @if (ViewBag.IsInUse == true)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>@T("layout.inUseWarning")</strong>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@T("layout.layoutName")</dt>
                        <dd class="col-sm-8">@Model.LayoutName</dd>

                        <dt class="col-sm-4">@T("layout.totalSections")</dt>
                        <dd class="col-sm-8">@Model.TotalSections</dd>

                        <dt class="col-sm-4">@T("common.status")</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? T("common.active") : T("common.inactive"))
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="LayoutID" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> @T("common.confirmDelete")
                </button>
                <a asp-action="Index" asp-route-companyId="@Model.CompanyID" class="btn btn-secondary">@T("common.cancel")</a>
            </form>
        </div>
    </div>
</div>
