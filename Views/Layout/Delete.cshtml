@model DigitalSignage.Models.Layout

@{
    ViewData["Title"] = "Delete Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-danger">Delete Layout</h1>

            <div class="alert alert-danger">
                <h4>Are you sure you want to delete this layout?</h4>
                <p>This action will also affect all pages using this layout.</p>
                <p><strong>This action cannot be undone!</strong></p>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Layout Name</dt>
                        <dd class="col-sm-8">@Model.LayoutName</dd>

                        <dt class="col-sm-4">Layout Code</dt>
                        <dd class="col-sm-8"><code>@Model.LayoutCode</code></dd>

                        <dt class="col-sm-4">Grid Size</dt>
                        <dd class="col-sm-8">@Model.GridColumnsX Ã— @Model.GridRowsY</dd>

                        <dt class="col-sm-4">Total Sections</dt>
                        <dd class="col-sm-8">@(Model.GridColumnsX * Model.GridRowsY)</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="LayoutID" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" asp-route-companyId="@Model.CompanyID" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
