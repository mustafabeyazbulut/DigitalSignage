@model DigitalSignage.Models.Layout

@{
    ViewData["Title"] = "Edit Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Edit Layout</h1>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="LayoutID" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="CompanyID" class="form-label">Company</label>
                    <select asp-for="CompanyID" class="form-select" asp-items="ViewBag.Companies" disabled>
                    </select>
                    <input type="hidden" asp-for="CompanyID" />
                    <div class="form-text">Company cannot be changed</div>
                </div>

                <div class="mb-3">
                    <label asp-for="LayoutName" class="form-label">Layout Name</label>
                    <input asp-for="LayoutName" class="form-control" />
                    <span asp-validation-for="LayoutName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LayoutCode" class="form-label">Layout Code</label>
                    <input asp-for="LayoutCode" class="form-control" readonly />
                    <div class="form-text">Layout code cannot be changed</div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="GridColumnsX" class="form-label">Columns (X)</label>
                            <input asp-for="GridColumnsX" type="number" min="1" max="12" class="form-control" readonly />
                            <div class="form-text">Grid dimensions cannot be changed</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="GridRowsY" class="form-label">Rows (Y)</label>
                            <input asp-for="GridRowsY" type="number" min="1" max="12" class="form-control" readonly />
                            <div class="form-text">Grid dimensions cannot be changed</div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <button type="button" class="btn btn-secondary" data-smart-back="@ViewBag.BreadcrumbBackUrl">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
