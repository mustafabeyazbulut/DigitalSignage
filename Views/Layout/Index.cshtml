@model IEnumerable<DigitalSignage.Models.Layout>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("layout.title");
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@T("layout.title")</h1>
            <p class="text-muted mb-0">@T("layout.subtitle")</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" asp-route-companyId="@ViewBag.SelectedCompanyId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @T("layout.newLayout")
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="form-group">
                <label for="companySelect" class="form-label">@T("common.selectCompany"):</label>
                <select id="companySelect" class="form-select" onchange="changeCompany(this.value)">
                    @if (ViewBag.Companies != null)
                    {
                        @foreach (var item in ViewBag.Companies)
                        {
                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>@T("layout.layoutName")</th>
                            <th>@T("layout.gridSize")</th>
                            <th>@T("common.description")</th>
                            <th>@T("common.createdDate")</th>
                            <th>@T("common.actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.LayoutName</strong>
                                </td>
                                <td>
                                    <span class="type-badge">
                                        <i class="bi bi-grid-3x3-gap"></i> @item.GridColumnsX x @item.GridRowsY
                                    </span>
                                </td>
                                <td>@(item.Description ?? "-")</td>
                                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td class="table-actions">
                                    <div class="action-dropdown">
                                        <button type="button" class="action-dropdown-toggle" title="@T("common.actions")">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="action-dropdown-menu">
                                            <a asp-action="Details" asp-route-id="@item.LayoutID" class="action-dropdown-item action-view">
                                                <i class="bi bi-eye"></i>
                                                <span>@T("common.details")</span>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.LayoutID" asp-route-returnUrl="@Url.Action("Index")" class="action-dropdown-item action-edit">
                                                <i class="bi bi-pencil"></i>
                                                <span>@T("common.edit")</span>
                                            </a>
                                            <div class="action-dropdown-divider"></div>
                                            <a asp-action="Delete" asp-route-id="@item.LayoutID" class="action-dropdown-item action-delete">
                                                <i class="bi bi-trash"></i>
                                                <span>@T("common.delete")</span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="table-empty-state">
            <i class="bi bi-grid-3x3-gap"></i>
            <h3>@T("layout.noLayoutsFound")</h3>
            <p>@T("layout.createFirstLayout")</p>
        </div>
    }

    </div>

@section Scripts {
    <script>
        function changeCompany(companyId) {
            if (companyId) {
                window.location.href = '@Url.Action("Index", "Layout")?companyId=' + companyId;
            }
        }
    </script>
}
