@model IEnumerable<DigitalSignage.Models.Layout>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("layout.title");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">@T("layout.title")</h2>
            <p class="text-muted mb-0">@T("layout.subtitle")</p>
        </div>
        @if (ViewBag.IsSystemAdmin == true || ViewBag.IsCompanyAdmin == true)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @T("layout.newLayout")
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        @T("layout.noLayoutsFound")
    </div>
}

else
{
<div class="container">
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3 d-inline-block border rounded p-2 bg-light">
                        <!-- Simple visual representation of grid -->
                        <div class="d-grid gap-1" style="grid-template-columns: repeat(@item.GridColumnsX, 1fr); grid-template-rows: repeat(@item.GridRowsY, 1fr); width: 100px; height: 60px;">
                            @for(int i=0; i < (item.GridColumnsX * item.GridRowsY); i++) {
                                <div class="bg-secondary opacity-25 rounded-1 w-100 h-100 border"></div>
                            }
                        </div>
                    </div>
                    <h5 class="fw-bold mb-1">@item.LayoutName</h5>
                    <span class="badge bg-light text-dark border mb-2">@item.GridColumnsX x @item.GridRowsY Grid</span>
                    <p class="text-muted small">@(item.Description ?? "No description")</p>
                </div>
                <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                     <div class="btn-group w-100">
                         <a asp-action="Details" asp-route-id="@item.LayoutID" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-eye"></i> View
                        </a>
                        @if (ViewBag.IsSystemAdmin == true || ViewBag.IsCompanyAdmin == true)
                        {
                             <a asp-action="Edit" asp-route-id="@item.LayoutID" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                             <a asp-action="Delete" asp-route-id="@item.LayoutID" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>
}

