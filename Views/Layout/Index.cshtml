@model IEnumerable<DigitalSignage.Models.Layout>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = "Layouts";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold text-dark">Layouts</h2>
            <p class="text-muted mb-0">Manage page layouts and grid configurations</p>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="companySelect" class="form-label">Select Company:</label>
                        <select id="companySelect" class="form-select" onchange="changeCompany(this.value)">
                            @if (ViewBag.Companies != null)
                            {
                                @foreach (var item in ViewBag.Companies)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <a asp-action="Create" asp-route-companyId="@ViewBag.SelectedCompanyId" class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle"></i> New Layout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No layouts found for this company. Create one to get started!
    </div>
}

else
{
<div class="container">
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3 d-inline-block border rounded p-2 bg-light">
                        <!-- Simple visual representation of grid -->
                        <div class="d-grid gap-1" style="grid-template-columns: repeat(@item.GridColumnsX, 1fr); grid-template-rows: repeat(@item.GridRowsY, 1fr); width: 100px; height: 60px;">
                            @for(int i=0; i < (item.GridColumnsX * item.GridRowsY); i++) {
                                <div class="bg-secondary opacity-25 rounded-1 w-100 h-100 border"></div>
                            }
                        </div>
                    </div>
                    <h5 class="fw-bold mb-1">@item.LayoutName</h5>
                    <span class="badge bg-light text-dark border mb-2">@item.GridColumnsX x @item.GridRowsY Grid</span>
                    <p class="text-muted small">@(item.Description ?? "No description")</p>
                </div>
                <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                     <div class="btn-group w-100">
                         <a asp-action="Details" asp-route-id="@item.LayoutID" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-eye"></i> View
                        </a>
                         <a asp-action="Edit" asp-route-id="@item.LayoutID" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                         <a asp-action="Delete" asp-route-id="@item.LayoutID" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>
}

@section Scripts {
    <script>
        function changeCompany(companyId) {
            if (companyId) {
                window.location.href = '@Url.Action("Index", "Layout")?companyId=' + companyId;
            }
        }
    </script>
}
