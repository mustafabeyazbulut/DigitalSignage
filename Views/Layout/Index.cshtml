@model IEnumerable<DigitalSignage.Models.Layout>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("layout.title");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">@T("layout.title")</h2>
            <p class="text-muted mb-0">@T("layout.subtitle")</p>
        </div>
        @if (ViewBag.IsSystemAdmin == true || ViewBag.IsCompanyAdmin == true)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @T("layout.newLayout")
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        @T("layout.noLayoutsFound")
    </div>
}
else
{
<div class="container">
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        var definition = item.LayoutDefinition ?? "{\"rows\":[{\"height\":100,\"columns\":[{\"width\":100}]}]}";
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3 d-inline-block border rounded p-2 bg-light" style="width:120px;height:80px;">
                        @{
                            try
                            {
                                var def = System.Text.Json.JsonSerializer.Deserialize<DigitalSignage.Models.LayoutDefinitionModel>(definition,
                                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                                if (def?.Rows != null)
                                {
                                    <div style="display:flex;flex-direction:column;gap:2px;height:100%;">
                                        @RenderMiniPreview(def.Rows)
                                    </div>
                                }
                            }
                            catch
                            {
                                <div class="text-muted small">?</div>
                            }
                        }
                    </div>
                    <h5 class="fw-bold mb-1">@item.LayoutName</h5>
                    <span class="badge bg-light text-dark border mb-2">@item.RowCount @T("layout.rows") / @item.TotalSections @T("layout.sections")</span>
                    <p class="text-muted small">@(item.Description ?? T("common.noDescription"))</p>
                </div>
                <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                     <div class="btn-group w-100">
                         <a asp-action="Details" asp-route-id="@item.LayoutID" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-eye"></i> @T("common.view")
                        </a>
                        @if (ViewBag.IsSystemAdmin == true || ViewBag.IsCompanyAdmin == true)
                        {
                             <a asp-action="Edit" asp-route-id="@item.LayoutID" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil"></i> @T("common.edit")
                            </a>
                             <a asp-action="Delete" asp-route-id="@item.LayoutID" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> @T("common.delete")
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>
}

@functions {
    IHtmlContent RenderMiniPreview(List<LayoutRowDefinition> rows)
    {
        var sb = new System.Text.StringBuilder();
        foreach (var row in rows)
        {
            sb.Append($"<div style=\"display:flex;gap:2px;flex:{row.Height};\">");
            if (row.Columns != null)
            {
                foreach (var col in row.Columns)
                {
                    if (col.Rows != null && col.Rows.Count > 0)
                    {
                        sb.Append($"<div style=\"flex:{col.Width};display:flex;flex-direction:column;gap:1px;border:1px dashed #ff9800;border-radius:2px;padding:1px;\">");
                        sb.Append(RenderMiniPreviewString(col.Rows));
                        sb.Append("</div>");
                    }
                    else
                    {
                        sb.Append($"<div style=\"flex:{col.Width};background-color:#90caf9;border-radius:2px;border:1px solid #64b5f6;\"></div>");
                    }
                }
            }
            sb.Append("</div>");
        }
        return new HtmlString(sb.ToString());
    }

    string RenderMiniPreviewString(List<LayoutRowDefinition> rows)
    {
        return ((HtmlString)RenderMiniPreview(rows)).Value ?? "";
    }
}
