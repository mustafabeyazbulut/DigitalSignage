        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 600;
        color: #495057;
        flex-shrink: 0;
    }
</style>

@if (hasLayout)
{
    <script>
        var currentSection = '';
        var currentPanelSection = '';
        var pageId = @Model.PageID;
        var departmentId = @Model.DepartmentID;
        var canEdit = @(canEdit ? "true" : "false");
        var antiForgeryToken = '@Html.AntiForgeryToken()'.match(/value="([^"]+)"/)?.[1] || '';

        // Çeviri string'leri (encoding sorunsuz)
        var LANG = {
            durationSeconds: '@Html.Raw(T("page.durationSeconds"))',
            moveUp: '@Html.Raw(T("page.moveUp"))',
            moveDown: '@Html.Raw(T("page.moveDown"))',
            remove: '@Html.Raw(T("common.remove"))',
            totalDuration: '@Html.Raw(T("page.totalDuration"))',
            seconds: '@Html.Raw(T("page.seconds"))',
            contents: '@Html.Raw(T("page.contents"))',
            addContent: '@Html.Raw(T("page.addContent"))',
            reorderSuccess: '@Html.Raw(T("page.reorderSuccess"))',
            confirmClearAll: '@Html.Raw(T("page.confirmClearAll"))',
            deleteTxt: '@Html.Raw(T("common.delete"))',
            cancel: '@Html.Raw(T("common.cancel"))',
            contentRemoved: '@Html.Raw(T("page.contentRemoved"))',
            contentAssigned: '@Html.Raw(T("page.contentAssigned"))',
            contentAlreadyAssigned: '@Html.Raw(T("page.contentAlreadyAssigned"))',
            durationUpdated: '@Html.Raw(T("page.durationUpdated"))',
            error: '@Html.Raw(T("common.error"))'
        };

        // Section bazında atanmış içerik bilgilerini takip et
        var sectionAssignedIds = {};
        var sectionContentsData = {};

        function getContentIcon(type) {
            switch ((type || '').toLowerCase()) {
                case 'image': return 'bi-image';
                case 'video': return 'bi-play-circle';
                case 'html': return 'bi-code-slash';
                case 'pdf': return 'bi-file-pdf';
                case 'url': return 'bi-link-45deg';
                default: return 'bi-file-text';
            }
        }

        function escapeHtml(text) {
            var div = document.createElement('div');
            div.appendChild(document.createTextNode(text));
            return div.innerHTML;
        }

        // ========== OFFCANVAS PANEL ==========

        function openSectionPanel(pos) {
            currentPanelSection = pos;

            // Önceki aktif hücre vurgusunu kaldır
            document.querySelectorAll('.design-cell.active-panel').forEach(function(el) {
                el.classList.remove('active-panel');
            });
            // Yeni hücreyi vurgula
            var cell = document.getElementById('cell-' + pos);
            if (cell) cell.classList.add('active-panel');

            // Panel başlığını ayarla
            document.getElementById('panelSectionBadge').textContent = pos;

            // Panel içeriğini render et
            renderPanelContents(pos);

            // Offcanvas'ı aç
            var panelEl = document.getElementById('sectionPanel');
            var offcanvas = bootstrap.Offcanvas.getInstance(panelEl);
            if (!offcanvas) offcanvas = new bootstrap.Offcanvas(panelEl);
            offcanvas.show();
        }

        function renderPanelContents(pos) {
            var list = document.getElementById('panelContentList');
            var emptyEl = document.getElementById('panelEmpty');
            var durationEl = document.getElementById('panelTotalDuration');
            var clearBtn = document.getElementById('panelClearBtn');

            var contents = sectionContentsData[pos] || [];

            if (contents.length === 0) {
                list.innerHTML = '';
                emptyEl.classList.remove('d-none');
                durationEl.classList.add('d-none');
                if (clearBtn) clearBtn.classList.add('d-none');
                return;
            }

            emptyEl.classList.add('d-none');
            durationEl.classList.remove('d-none');
            if (clearBtn) clearBtn.classList.remove('d-none');

            var html = '';
            contents.forEach(function(c, idx) {
                html += '<div class="panel-content-card" data-pcid="' + c.pageContentId + '" data-content-id="' + c.contentId + '">';
                html += '  <span class="panel-order-num">' + (idx + 1) + '</span>';
                html += '  <i class="bi ' + getContentIcon(c.contentType) + ' fs-5 text-primary"></i>';
                html += '  <div class="content-info">';
                html += '    <div class="content-title" title="' + escapeHtml(c.contentTitle || '') + '">' + escapeHtml(c.contentTitle || 'Untitled') + '</div>';
                html += '    <small class="text-muted">' + escapeHtml(c.contentType || '') + '</small>';
                html += '  </div>';
                html += '  <div class="content-actions">';
                if (canEdit) {
                    html += '    <input type="number" class="duration-input" value="' + c.durationSeconds + '" min="1" ';
                    html += '      onchange="updateDuration(' + c.pageContentId + ', this)" title="' + LANG.durationSeconds + '">';
                    html += '    <span class="text-muted" style="font-size:0.75rem;">s</span>';
                    // Yukarı taşı
                    if (idx > 0) {
                        html += '    <button class="btn btn-outline-secondary btn-action" onclick="moveContent(' + c.pageContentId + ', \'' + pos + '\', \'up\')" title="' + LANG.moveUp + '">';
                        html += '      <i class="bi bi-chevron-up"></i></button>';
                    } else {
                        html += '    <button class="btn btn-outline-secondary btn-action" disabled><i class="bi bi-chevron-up"></i></button>';
                    }
                    // Aşağı taşı
                    if (idx < contents.length - 1) {
                        html += '    <button class="btn btn-outline-secondary btn-action" onclick="moveContent(' + c.pageContentId + ', \'' + pos + '\', \'down\')" title="' + LANG.moveDown + '">';
                        html += '      <i class="bi bi-chevron-down"></i></button>';
                    } else {
                        html += '    <button class="btn btn-outline-secondary btn-action" disabled><i class="bi bi-chevron-down"></i></button>';
                    }
                    // Sil
                    html += '    <button class="btn btn-outline-danger btn-action" onclick="removeOneContent(' + c.pageContentId + ', \'' + pos + '\')" title="' + LANG.remove + '">';
                    html += '      <i class="bi bi-trash"></i></button>';
                } else {
                    html += '    <span class="badge bg-info">' + c.durationSeconds + 's</span>';
                }
                html += '  </div>';
                html += '</div>';
            });

            list.innerHTML = html;
            updatePanelTotalDuration(pos);
        }

        function updatePanelTotalDuration(pos) {
            var contents = sectionContentsData[pos] || [];
            var total = 0;
            // Panel'deki duration input'lardan oku (güncel değerler)
            var inputs = document.querySelectorAll('#panelContentList .duration-input');
            if (inputs.length > 0) {
                inputs.forEach(function(inp) { total += parseInt(inp.value) || 0; });
            } else {
                contents.forEach(function(c) { total += c.durationSeconds || 0; });
            }

            var durationEl = document.getElementById('panelTotalDuration');
            if (durationEl) {
                var span = durationEl.querySelector('span');
                if (span) span.textContent = LANG.totalDuration + ': ' + total + ' ' + LANG.seconds + ' (' + contents.length + ' ' + LANG.contents + ')';
            }
        }

        function moveContent(pageContentId, pos, direction) {
            var contents = sectionContentsData[pos] || [];
            var idx = contents.findIndex(function(c) { return c.pageContentId === pageContentId; });
            if (idx === -1) return;

            var swapIdx = direction === 'up' ? idx - 1 : idx + 1;
            if (swapIdx < 0 || swapIdx >= contents.length) return;

            // Yerlerini değiştir
            var temp = contents[idx];
            contents[idx] = contents[swapIdx];
            contents[swapIdx] = temp;
            sectionContentsData[pos] = contents;

            // Sıralı ID listesini oluştur
            var orderedIds = contents.map(function(c) { return c.pageContentId; });

            // JSON body olarak gönder (endpoint [FromBody] int[] bekliyor)
            fetch('@Url.Action("ReorderSectionContents", "Page")' + '?pageId=' + pageId + '&sectionPosition=' + encodeURIComponent(pos), {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': antiForgeryToken,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(orderedIds)
            })
            .then(function(r) { return r.json(); })
            .then(function(data) {
                if (data.success) {
                    renderPanelContents(pos);
                    updateCellSummary(pos);
                    Swal.fire({
                        icon: 'success',
                        title: LANG.reorderSuccess,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 1500,
                        timerProgressBar: true
                    });
                }
            })
            .catch(function() { });
        }

        function clearAllPanelContents() {
            var pos = currentPanelSection;
            Swal.fire({
                title: LANG.confirmClearAll,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: LANG.deleteTxt,
                cancelButtonText: LANG.cancel
            }).then(function(result) {
                if (!result.isConfirmed) return;

                var formData = new FormData();
                formData.append('pageId', pageId);
                formData.append('sectionPosition', pos);

                fetch('@Url.Action("RemoveContentFromSection", "Page")', {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': antiForgeryToken },
                    body: formData
                })
                .then(function(r) { return r.json(); })
                .then(function(data) {
                    if (data.success) {
                        sectionContentsData[pos] = [];
                        sectionAssignedIds[pos] = [];
                        renderPanelContents(pos);
                        clearCellUI(pos);
                        Swal.fire({
                            icon: 'success',
                            title: LANG.contentRemoved,
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 2000,
                            timerProgressBar: true
                        });
                    } else {
                        Swal.fire({ icon: 'error', title: LANG.error, text: data.message || LANG.error });
                    }
                })
                .catch(function() {
                    Swal.fire({ icon: 'error', title: LANG.error, text: LANG.error });
                });
            });
        }

        // ========== İÇERİK MODAL ==========

        function openContentModal(sectionPos) {
            currentSection = sectionPos;
            document.getElementById('modalSectionBadge').textContent = sectionPos;

            var loading = document.getElementById('contentLoading');
            var empty = document.getElementById('contentEmpty');
            var grid = document.getElementById('contentGrid');

            loading.classList.remove('d-none');
            empty.classList.add('d-none');
            grid.classList.add('d-none');
            grid.innerHTML = '';

            var modal = bootstrap.Modal.getInstance(document.getElementById('contentModal'));
            if (!modal) modal = new bootstrap.Modal(document.getElementById('contentModal'));
            modal.show();

            // Bu section'da zaten atanmış content ID'leri
            var assignedIds = sectionAssignedIds[sectionPos] || [];

            fetch('@Url.Action("GetDepartmentContents", "Page")?departmentId=' + departmentId)
                .then(function(r) { return r.json(); })
                .then(function(data) {
                    loading.classList.add('d-none');
                    if (!data.success || !data.contents || data.contents.length === 0) {
                        empty.classList.remove('d-none');
                        return;
                    }

                    grid.classList.remove('d-none');
                    data.contents.forEach(function(c) {
                        var isAssigned = assignedIds.indexOf(c.contentId) !== -1;
                        var col = document.createElement('div');
                        col.className = 'col-md-4';
                        col.innerHTML =
                            '<div class="card content-card h-100 ' + (isAssigned ? 'already-assigned' : '') + '" ' +
                            (isAssigned ? '' : 'onclick="assignContent(' + c.contentId + ', this)"') + '>' +
                            '  <div class="card-body text-center">' +
                            '    <i class="bi ' + getContentIcon(c.contentType) + ' fs-2 text-primary"></i>' +
                            '    <h6 class="fw-bold mt-2 mb-1">' + escapeHtml(c.contentTitle || 'Untitled') + '</h6>' +
                            '    <span class="badge bg-secondary">' + escapeHtml(c.contentType) + '</span>' +
                            (isAssigned ? '<br><span class="badge bg-success mt-1">' + LANG.contentAlreadyAssigned + '</span>' : '') +
                            '  </div>' +
                            '</div>';
                        grid.appendChild(col);
                    });
                })
                .catch(function() {
                    loading.classList.add('d-none');
                    empty.classList.remove('d-none');
                });
        }

        function assignContent(contentId, cardEl) {
            var formData = new FormData();
            formData.append('pageId', pageId);
            formData.append('sectionPosition', currentSection);
            formData.append('contentId', contentId);

            fetch('@Url.Action("AssignContentToSection", "Page")', {
                method: 'POST',
                headers: { 'RequestVerificationToken': antiForgeryToken },
                body: formData
            })
            .then(function(r) { return r.json(); })
            .then(function(data) {
                if (data.success) {
                    // Section veri ve UI'ını güncelle
                    updateSectionData(currentSection, data.sectionContents);
                    updateCellSummary(currentSection);
                    // Panel açıksa paneli de güncelle
                    if (currentPanelSection === currentSection) {
                        renderPanelContents(currentSection);
                    }
                    // Modal'ı kapatma — kullanıcı birden fazla içerik ekleyebilsin
                    if (cardEl) {
                        cardEl.classList.add('already-assigned');
                        cardEl.removeAttribute('onclick');
                        cardEl.querySelector('.card-body').insertAdjacentHTML('beforeend',
                            '<br><span class="badge bg-success mt-1">' + LANG.contentAlreadyAssigned + '</span>');
                    }
                    Swal.fire({
                        icon: 'success',
                        title: LANG.contentAssigned,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true
                    });
                } else {
                    Swal.fire({ icon: 'warning', title: LANG.error, text: data.message || LANG.error });
                }
            })
            .catch(function() {
                Swal.fire({ icon: 'error', title: LANG.error, text: LANG.error });
            });
        }

        // ========== TEKİL SİLME ==========

        function removeOneContent(pageContentId, sectionPos) {
            var formData = new FormData();
            formData.append('pageContentId', pageContentId);
            formData.append('pageId', pageId);
            formData.append('sectionPosition', sectionPos);

            fetch('@Url.Action("RemoveSingleContentFromSection", "Page")', {
                method: 'POST',
                headers: { 'RequestVerificationToken': antiForgeryToken },
                body: formData
            })
            .then(function(r) { return r.json(); })
            .then(function(data) {
                if (data.success) {
                    // Veri yapısından kaldır
                    var contents = sectionContentsData[sectionPos] || [];
                    sectionContentsData[sectionPos] = contents.filter(function(c) { return c.pageContentId !== pageContentId; });
                    sectionAssignedIds[sectionPos] = sectionContentsData[sectionPos].map(function(c) { return c.contentId; });

                    // Hücre ve panel güncelle
                    if (sectionContentsData[sectionPos].length === 0) {
                        clearCellUI(sectionPos);
                    } else {
                        updateCellSummary(sectionPos);
                    }
                    if (currentPanelSection === sectionPos) {
                        renderPanelContents(sectionPos);
                    }

                    Swal.fire({
                        icon: 'success',
                        title: LANG.contentRemoved,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true
                    });
                } else {
                    Swal.fire({ icon: 'error', title: LANG.error, text: data.message || LANG.error });
                }
            })
            .catch(function() {
                Swal.fire({ icon: 'error', title: LANG.error, text: LANG.error });
            });
        }

        // ========== SÜRE GÜNCELLEME ==========

        function updateDuration(pageContentId, inputEl) {
            var val = parseInt(inputEl.value);
            if (isNaN(val) || val < 1) { inputEl.value = 1; val = 1; }

            // Yerel veri güncelle
            var pos = currentPanelSection;
            var contents = sectionContentsData[pos] || [];
            var item = contents.find(function(c) { return c.pageContentId === pageContentId; });
            if (item) item.durationSeconds = val;

            updatePanelTotalDuration(pos);

            var formData = new FormData();
            formData.append('pageContentId', pageContentId);
            formData.append('pageId', pageId);
            formData.append('durationSeconds', val);

            fetch('@Url.Action("UpdateContentDuration", "Page")', {
                method: 'POST',
                headers: { 'RequestVerificationToken': antiForgeryToken },
                body: formData
            })
            .then(function(r) { return r.json(); })
            .then(function(data) {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: LANG.durationUpdated,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 1500,
                        timerProgressBar: true
                    });
                }
            })
            .catch(function() { });
        }

        // ========== HÜCRE UI GÜNCELLEME ==========

        function updateSectionData(sectionPos, contents) {
            sectionContentsData[sectionPos] = contents;
            sectionAssignedIds[sectionPos] = contents.map(function(c) { return c.contentId; });
        }

        function updateCellSummary(sectionPos) {
            var cell = document.getElementById('cell-' + sectionPos);
            if (!cell) return;

            var contents = sectionContentsData[sectionPos] || [];
            if (contents.length === 0) {
                clearCellUI(sectionPos);
                return;
            }

            cell.classList.add('has-content');
            cell.style.backgroundColor = '#d4edda';
            cell.style.borderColor = '#28a745';
            cell.setAttribute('onclick', "openSectionPanel('" + sectionPos + "')");

            var first = contents[0];
            var html = '<div class="cell-summary" onclick="openSectionPanel(\'' + sectionPos + '\')">';
            html += '<strong class="text-muted d-block" style="font-size:0.7rem;">' + sectionPos + '</strong>';
            html += '<div class="text-truncate" style="font-size:0.8rem;"><i class="bi ' + getContentIcon(first.contentType) + ' text-success me-1"></i>' + escapeHtml(first.contentTitle || 'Untitled') + '</div>';
            html += '<span class="badge bg-success mt-1">' + contents.length + ' ' + LANG.contents + '</span>';
            html += '</div>';

            cell.innerHTML = html;
        }

        function clearCellUI(sectionPos) {
            var cell = document.getElementById('cell-' + sectionPos);
            if (!cell) return;

            sectionContentsData[sectionPos] = [];
            sectionAssignedIds[sectionPos] = [];

            cell.classList.remove('has-content');
            cell.style.backgroundColor = '#f8f9fa';
            cell.style.borderColor = '#dee2e6';
            cell.setAttribute('onclick', "openSectionPanel('" + sectionPos + "')");

            var html = '<strong class="text-muted">' + sectionPos + '</strong>';
            if (canEdit) {
                html += '<button class="btn btn-outline-primary btn-sm mt-2" onclick="event.stopPropagation(); openSectionPanel(\'' + sectionPos + '\')">' +
                        '  <i class="bi bi-plus-circle me-1"></i> ' + LANG.addContent + '</button>';
            }
            cell.innerHTML = html;
        }

        // ========== OFFCANVAS KAPANMA ==========

        document.getElementById('sectionPanel').addEventListener('hidden.bs.offcanvas', function() {
            // Aktif hücre vurgusunu kaldır
            document.querySelectorAll('.design-cell.active-panel').forEach(function(el) {
                el.classList.remove('active-panel');
            });
        });

        // ========== SAYFA YÜKLENDİĞİNDE ==========

        (function() {
            @foreach (var kvp in sectionContentMap)
            {
                <text>
                sectionAssignedIds['@kvp.Key'] = [@string.Join(",", kvp.Value.Select(pc => pc.ContentID))];
                sectionContentsData['@kvp.Key'] = [
                    @foreach (var pc in kvp.Value)
                    {
                        if (pc.Content != null)
                        {
                            <text>{ pageContentId: @pc.PageContentID, contentId: @pc.ContentID, contentTitle: '@System.Web.HttpUtility.JavaScriptStringEncode(pc.Content.ContentTitle ?? "")', contentType: '@System.Web.HttpUtility.JavaScriptStringEncode(pc.Content.ContentType ?? "")', durationSeconds: @pc.DurationSeconds },</text>
                        }
                    }
                ];
                </text>
            }
        })();
    </script>
}

@functions {
    string GetContentIcon(string contentType)
    {
        return (contentType?.ToLower()) switch
        {
            "image" => "bi-image",
            "video" => "bi-play-circle",
            "html" => "bi-code-slash",
            "pdf" => "bi-file-pdf",
            "url" => "bi-link-45deg",
            _ => "bi-file-text"
        };
    }

    /// <summary>
    /// Design grid'ini recursive olarak render eder (çoklu içerik atama destekli).
    /// </summary>
    IHtmlContent RenderDesignGrid(
        List<DigitalSignage.Models.LayoutRowDefinition> rows,
        string parentPos,
        Dictionary<string, List<DigitalSignage.Models.PageContent>> contentMap,
        bool canEdit,
        Func<string, string> T)
    {
        var sb = new System.Text.StringBuilder();
        for (int ri = 0; ri < rows.Count; ri++)
        {
            var row = rows[ri];
            var colTemplate = string.Join(" ", row.Columns?.Select(c => c.Width + "fr") ?? Array.Empty<string>());
            sb.Append($"<div style=\"display:grid;grid-template-columns:{colTemplate};gap:10px;flex:{row.Height};\">");
            if (row.Columns != null)
            {
                for (int ci = 0; ci < row.Columns.Count; ci++)
                {
                    var col = row.Columns[ci];
                    var pos = string.IsNullOrEmpty(parentPos) ? $"R{ri + 1}C{ci + 1}" : $"{parentPos}.R{ri + 1}C{ci + 1}";

                    if (col.Rows != null && col.Rows.Count > 0)
                    {
                        // İç içe bölünmüş sütun — alt yapıyı render et
                        sb.Append("<div style=\"display:flex;flex-direction:column;gap:8px;border:2px dashed #ff9800;border-radius:5px;padding:8px;background:rgba(255,152,0,0.05);\">");
                        sb.Append(RenderDesignGridString(col.Rows, pos, contentMap, canEdit, T));
                        sb.Append("</div>");
                    }
                    else
                    {
                        // Yaprak hücre — içerik atama (çoklu destekli)
                        var hasContent = contentMap.ContainsKey(pos) && contentMap[pos].Count > 0;
                        var assignedList = hasContent ? contentMap[pos] : new List<DigitalSignage.Models.PageContent>();
                        var bgColor = hasContent ? "#d4edda" : "#f8f9fa";
                        var borderColor = hasContent ? "#28a745" : "#dee2e6";
                        var cursor = canEdit ? "cursor:pointer;" : "";
                        var posEscaped = System.Web.HttpUtility.HtmlAttributeEncode(pos);

                        sb.Append($"<div id=\"cell-{posEscaped}\" class=\"design-cell {(hasContent ? "has-content" : "")}\" ");
                        sb.Append($"style=\"background-color:{bgColor};border:2px solid {borderColor};padding:10px;border-radius:5px;display:flex;flex-direction:column;align-items:center;justify-content:center;position:relative;cursor:pointer;min-height:80px;\" ");
                        if (!hasContent)
                            sb.Append($"onclick=\"openSectionPanel('{pos}')\" ");
                        sb.Append(">");

                        if (hasContent)
                        {
                            // Hücrede sadece özet göster — detay offcanvas panelde
                            var first = assignedList.FirstOrDefault(a => a.Content != null);
                            var firstIcon = first != null ? GetContentIcon(first.Content!.ContentType) : "bi-file-text";
                            var firstTitle = first != null ? System.Web.HttpUtility.HtmlEncode(first.Content!.ContentTitle) : "";
                            var count = assignedList.Count;

                            sb.Append("<div class=\"cell-summary\" onclick=\"openSectionPanel('" + pos + "')\">");
                            sb.Append($"<strong class=\"text-muted d-block\" style=\"font-size:0.7rem;\">{pos}</strong>");
                            sb.Append($"<div class=\"text-truncate\" style=\"font-size:0.8rem;\"><i class=\"bi {firstIcon} text-success me-1\"></i>{firstTitle}</div>");
                            if (count > 1)
                                sb.Append($"<span class=\"badge bg-success mt-1\">{count} {T("page.contents")}</span>");
                            else
                                sb.Append($"<span class=\"badge bg-success mt-1\">1 {T("page.contents")}</span>");
                            sb.Append("</div>");
                        }
                        else
                        {
                            sb.Append($"<strong class=\"text-muted\">{pos}</strong>");
                            sb.Append($"<p class=\"text-muted small mb-0\">{col.Width}% x {row.Height}%</p>");
                            if (canEdit)
                            {
                                sb.Append($"<button class=\"btn btn-outline-primary btn-sm mt-2\" onclick=\"event.stopPropagation(); openSectionPanel('{pos}')\">");
                                sb.Append($"<i class=\"bi bi-plus-circle me-1\"></i> {T("page.addContent")}</button>");
                            }
                        }
                        sb.Append("</div>");
                    }
                }
            }
            sb.Append("</div>");
        }
        return new HtmlString(sb.ToString());
    }

    string RenderDesignGridString(
        List<DigitalSignage.Models.LayoutRowDefinition> rows,
        string parentPos,
        Dictionary<string, List<DigitalSignage.Models.PageContent>> contentMap,
        bool canEdit,
        Func<string, string> T)
    {
        return ((HtmlString)RenderDesignGrid(rows, parentPos, contentMap, canEdit, T)).Value ?? "";
    }

    /// <summary>
    /// Mini preview (layout seçim kartları için) recursive render.
    /// </summary>
    IHtmlContent RenderMiniPreview(List<DigitalSignage.Models.LayoutRowDefinition> rows)
    {
        var sb = new System.Text.StringBuilder();
        foreach (var row in rows)
        {
            sb.Append($"<div style=\"display:flex;gap:3px;flex:{row.Height};\">");
            if (row.Columns != null)
            {
                foreach (var col in row.Columns)
                {
                    if (col.Rows != null && col.Rows.Count > 0)
                    {
                        sb.Append($"<div style=\"flex:{col.Width};display:flex;flex-direction:column;gap:2px;border:1px dashed #ff9800;border-radius:2px;padding:1px;\">");
                        sb.Append(RenderMiniPreviewString(col.Rows));
                        sb.Append("</div>");
                    }
                    else
                    {
                        sb.Append($"<div style=\"flex:{col.Width};background-color:#e9ecef;border:1px solid #ced4da;border-radius:3px;\"></div>");
                    }
                }
            }
            sb.Append("</div>");
        }
        return new HtmlString(sb.ToString());
    }

    string RenderMiniPreviewString(List<DigitalSignage.Models.LayoutRowDefinition> rows)
    {
        return ((HtmlString)RenderMiniPreview(rows)).Value ?? "";
    }
}
