@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;

    var layouts = ViewData["Layouts"] as IEnumerable<DigitalSignage.Models.Layout> ?? Enumerable.Empty<DigitalSignage.Models.Layout>();
    var pageId = ViewData["PageId"];
    var currentLayoutId = ViewData["CurrentLayoutId"] as int?;
}

<div class="card shadow-sm border-warning">
    <div class="card-header bg-warning bg-opacity-10">
        <h5 class="mb-0"><i class="bi bi-arrow-repeat me-2"></i> @T("page.changeLayout")</h5>
    </div>
    <div class="card-body">
        @if (layouts.Any())
        {
            <div class="row g-3">
                @foreach (var layout in layouts.Where(l => l.IsActive))
                {
                    var isCurrentLayout = currentLayoutId.HasValue && currentLayoutId.Value == layout.LayoutID;
                    var lDef = layout.LayoutDefinition ?? "{\"rows\":[{\"height\":100,\"columns\":[{\"width\":100}]}]}";
                    DigitalSignage.Models.LayoutDefinitionModel? def = null;
                    try { def = System.Text.Json.JsonSerializer.Deserialize<DigitalSignage.Models.LayoutDefinitionModel>(lDef, new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true }); } catch { }

                    <div class="col-md-3">
                        <form asp-action="AssignLayout" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="pageId" value="@pageId" />
                            <input type="hidden" name="layoutId" value="@layout.LayoutID" />
                            <div class="card h-100 layout-card @(isCurrentLayout ? "border-primary" : "")" style="cursor: pointer;" onclick="this.closest('form').submit();">
                                <div class="card-body text-center p-2">
                                    <div style="display:flex;flex-direction:column;gap:2px;height:80px;border:1px solid #dee2e6;padding:2px;border-radius:4px;margin-bottom:8px;">
                                        @if (def?.Rows != null)
                                        {
                                            @foreach (var row in def.Rows)
                                            {
                                                <div style="display:flex;gap:2px;flex:@row.Height;">
                                                    @if (row.Columns != null)
                                                    {
                                                        @foreach (var col in row.Columns)
                                                        {
                                                            <div style="flex:@col.Width;background-color:@(isCurrentLayout ? "#cfe2ff" : "#e9ecef");border:1px solid @(isCurrentLayout ? "#9ec5fe" : "#ced4da");border-radius:2px;"></div>
                                                        }
                                                    }
                                                </div>
                                            }
                                        }
                                    </div>
                                    <small class="fw-bold">@layout.LayoutName</small>
                                    <br />
                                    <span class="badge bg-secondary" style="font-size: 0.7rem;">@layout.RowCount @T("layout.rows") / @layout.TotalSections @T("layout.sections")</span>
                                    @if (isCurrentLayout)
                                    {
                                        <br />
                                        <span class="badge bg-primary mt-1" style="font-size: 0.65rem;">@T("common.active")</span>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">@T("layout.noLayoutsFound")</p>
        }
    </div>
</div>
