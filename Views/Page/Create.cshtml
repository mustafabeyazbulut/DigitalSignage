@model DigitalSignage.Models.Page

@{
    ViewData["Title"] = "Create Page";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">Create New Page</h2>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back to List
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <h5 class="text-primary fw-bold mb-3"><i class="fas fa-info-circle me-2"></i> Page Details</h5>
                    
                    <div class="mb-3">
                         <label asp-for="DepartmentID" class="form-label fw-bold">Department</label>
                         @if(ViewBag.Departments != null)
                         {
                            <select asp-for="DepartmentID" class="form-select" asp-items="@(new SelectList(ViewBag.Departments, "DepartmentID", "DepartmentName"))">
                                <option value="">Select Department...</option>
                            </select>
                         }
                         else
                         {
                             <input type="hidden" asp-for="DepartmentID" value="@ViewBag.DepartmentId" />
                             <input type="text" class="form-control" value="Current Department" disabled />
                         }
                         <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="PageName" class="form-label fw-bold">Page Name (Internal)</label>
                            <input asp-for="PageName" class="form-control" placeholder="e.g. Lobby_Monitor_Morning" />
                            <span asp-validation-for="PageName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PageTitle" class="form-label fw-bold">Display Title</label>
                            <input asp-for="PageTitle" class="form-control" placeholder="e.g. Welcome to Our Office" />
                            <span asp-validation-for="PageTitle" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PageCode" class="form-label fw-bold">Page Code</label>
                            <input asp-for="PageCode" class="form-control text-uppercase" placeholder="e.g. PG-001" />
                            <span asp-validation-for="PageCode" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LayoutID" class="form-label fw-bold">Grid Layout</label>
                             <select asp-for="LayoutID" class="form-select" asp-items="@(new SelectList(ViewBag.Layouts, "LayoutID", "LayoutName"))">
                                <option value="">Select Layout...</option>
                            </select>
                            <span asp-validation-for="LayoutID" class="text-danger small"></span>
                        </div>
                         <div class="col-md-12">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                         <div class="col-md-6 pt-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                <label class="form-check-label fw-bold" asp-for="IsActive">Active Status</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i> Create Page & Start Designing
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
