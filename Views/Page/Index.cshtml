@model IEnumerable<DigitalSignage.Models.Page>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("page.title");

    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var sortBy = ViewBag.SortBy as string ?? "";
    var sortOrder = ViewBag.SortOrder as string ?? "asc";
    var departmentId = ViewBag.DepartmentId as int?;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@T("page.title")</h1>
            <p class="text-muted mb-0">@T("page.subtitle")</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary" asp-route-departmentId="@departmentId">
                <i class="bi bi-plus-circle"></i> @T("page.newPage")
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="@T("common.search")..." value="@searchTerm">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">@T("common.search")</button>
                </div>
                @if(departmentId != null) {
                    <input type="hidden" name="departmentId" value="@departmentId" />
                }
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>
                                <a href="?search=@searchTerm&sortBy=PageTitle&sortOrder=@(sortBy == "PageTitle" && sortOrder == "asc" ? "desc" : "asc")@(departmentId != null ? $"&departmentId={departmentId}" : "")" class="text-white text-decoration-none">
                                    @T("page.pageTitle")
                                    @if (sortBy == "PageTitle")
                                    {
                                        <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>@T("page.description")</th>
                            <th>@T("page.layout")</th>
                            <th>@T("common.status")</th>
                            <th>
                                <a href="?search=@searchTerm&sortBy=CreatedDate&sortOrder=@(sortBy == "CreatedDate" && sortOrder == "asc" ? "desc" : "asc")@(departmentId != null ? $"&departmentId={departmentId}" : "")" class="text-white text-decoration-none">
                                    @T("common.createdDate")
                                    @if (sortBy == "CreatedDate")
                                    {
                                        <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>@T("common.actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PageTitle</td>
                                <td>@(item.Description ?? "-")</td>
                                <td>
                                    <span class="type-badge layout">
                                        <i class="bi bi-grid-3x3"></i>
                                        @(item.Layout != null ? $"{item.Layout.GridColumnsX}x{item.Layout.GridRowsY}" : T("page.custom"))
                                    </span>
                                </td>
                                <td>
                                    <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                        @(item.IsActive ? T("common.active") : T("common.inactive"))
                                    </span>
                                </td>
                                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td class="table-actions">
                                    <div class="action-dropdown">
                                        <button type="button" class="action-dropdown-toggle" title="@T("common.actions")">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="action-dropdown-menu">
                                            <a asp-action="Details" asp-route-id="@item.PageID" class="action-dropdown-item action-view">
                                                <i class="bi bi-eye"></i>
                                                <span>@T("common.details")</span>
                                            </a>
                                            <a asp-action="Design" asp-route-id="@item.PageID" class="action-dropdown-item action-design">
                                                <i class="bi bi-palette"></i>
                                                <span>@T("page.designLayout")</span>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.PageID" asp-route-returnUrl="@Url.Action("Index")" class="action-dropdown-item action-edit">
                                                <i class="bi bi-pencil"></i>
                                                <span>@T("common.edit")</span>
                                            </a>
                                            <div class="action-dropdown-divider"></div>
                                            <a asp-action="Delete" asp-route-id="@item.PageID" class="action-dropdown-item action-delete">
                                                <i class="bi bi-trash"></i>
                                                <span>@T("common.delete")</span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@(currentPage - 1)@(departmentId != null ? $"&departmentId={departmentId}" : "")">
                            @T("common.previous")
                        </a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@i@(departmentId != null ? $"&departmentId={departmentId}" : "")">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@(currentPage + 1)@(departmentId != null ? $"&departmentId={departmentId}" : "")">
                            @T("common.next")
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="table-empty-state">
            <i class="bi bi-layers"></i>
            <h3>@T("page.noPages")</h3>
            <p>@T("page.createFirstPage")</p>
        </div>
    }
</div>
