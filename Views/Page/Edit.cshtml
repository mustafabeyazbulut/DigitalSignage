@model DigitalSignage.Models.Page

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("page.editTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h1>@T("page.editTitle")</h1>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="PageID" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="DepartmentID" class="form-label fw-bold">@T("dashboard.department")</label>
                            <select asp-for="DepartmentID" class="form-select" asp-items="ViewBag.Departments">
                                <option value="">@T("page.selectDepartment")</option>
                            </select>
                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PageName" class="form-label fw-bold">@T("page.pageName")</label>
                                    <input asp-for="PageName" class="form-control" />
                                    <span asp-validation-for="PageName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PageTitle" class="form-label fw-bold">@T("page.pageTitle")</label>
                                    <input asp-for="PageTitle" class="form-control" />
                                    <span asp-validation-for="PageTitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PageCode" class="form-label fw-bold">@T("page.pageCode")</label>
                                    <input asp-for="PageCode" class="form-control text-uppercase" />
                                    <span asp-validation-for="PageCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LayoutID" class="form-label fw-bold">@T("page.designLayout")</label>
                                    <select asp-for="LayoutID" class="form-select" asp-items="ViewBag.Layouts">
                                        <option value="">@T("page.selectLayout")</option>
                                    </select>
                                    <span asp-validation-for="LayoutID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@T("company.description")</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> @T("common.update")
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">@T("common.cancel")</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
