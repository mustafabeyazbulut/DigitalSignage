<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digital Signage</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-primary text-white py-4 text-center fw-bold fs-5">
                <i class="fas fa-tv me-2"></i>Digital Signage
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active-link" : "")">
                    <i class="fas fa-tachometer-alt me-2 text-primary"></i>Dashboard
                </a>
               
                <div class="sidebar-subheading text-muted text-uppercase fs-7 px-3 mt-4 mb-2">Management</div>
                
                <a asp-controller="Company" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Company" ? "active-link" : "")">
                    <i class="fas fa-building me-2 text-secondary"></i>Companies
                </a>
                <a asp-controller="Department" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Department" ? "active-link" : "")">
                    <i class="fas fa-sitemap me-2 text-secondary"></i>Departments
                </a>
                <a asp-controller="User" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "User" ? "active-link" : "")">
                   <i class="fas fa-users me-2 text-secondary"></i>Users
                </a>

                <div class="sidebar-subheading text-muted text-uppercase fs-7 px-3 mt-4 mb-2">Content & Design</div>

                <a asp-controller="Page" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Page" ? "active-link" : "")">
                    <i class="fas fa-desktop me-2 text-success"></i>Pages
                </a>
                <a asp-controller="Layout" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Layout" ? "active-link" : "")">
                    <i class="fas fa-th-large me-2 text-warning"></i>Layouts
                </a>
                <a asp-controller="Content" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Content" ? "active-link" : "")">
                    <i class="fas fa-photo-video me-2 text-info"></i>Media Library
                </a>
                <a asp-controller="Schedule" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Schedule" ? "active-link" : "")">
                    <i class="fas fa-calendar-alt me-2 text-danger"></i>Schedules
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3 px-4 shadow-sm">
                <button class="btn btn-light" id="sidebarToggle"><i class="fas fa-bars"></i></button>
 
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                         <!-- Tenant Selector Dropdown (Mock) -->
                        <li class="nav-item dropdown me-3">
                            <a class="nav-link dropdown-toggle" href="#" id="tenantDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="badge bg-primary me-2">Corporate HQ</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="tenantDropdown">
                                <a class="dropdown-item" href="#">Switch Company</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Managing: ACME Corp</a>
                            </div>
                        </li>

                        <!-- User Profile -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user-circle fs-4 me-2 text-secondary"></i>
                                <span>Admin User</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Profile</a>
                                <a class="dropdown-item" href="#">Settings</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="#">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid px-4 py-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @RenderBody()
            </div>
            
             <footer class="mt-auto py-3 bg-white text-center text-muted border-top fs-7">
                <div class="container-fluid">
                   &copy; 2026 Digital Signage - v2.0 Professional
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $("#sidebarToggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
