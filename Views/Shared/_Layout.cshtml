@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    var supportedLangs = ViewBag.SupportedLanguages as IEnumerable<string>;

    // Kısayol fonksiyonu
    string T(string key) => lang?.Get(locale, key) ?? key;

    // Dil bayrakları
    var langFlags = new Dictionary<string, string> {
        { "en", "🇺🇸" },
        { "tr", "🇹🇷" },
        { "de", "🇩🇪" }
    };

    var langNames = new Dictionary<string, string> {
        { "en", "English" },
        { "tr", "Türkçe" },
        { "de", "Deutsch" }
    };
}

<!DOCTYPE html>
<html lang="@locale">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @T("common.appName")</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-primary text-white py-4 text-center fw-bold fs-5">
                <i class="fas fa-tv me-2"></i>@T("common.appName")
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active-link" : "")">
                    <i class="fas fa-tachometer-alt me-2 text-primary"></i>@T("nav.dashboard")
                </a>
               
                <div class="sidebar-subheading text-muted text-uppercase fs-7 px-3 mt-4 mb-2">@T("nav.management")</div>
                
                <a asp-controller="Company" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Company" ? "active-link" : "")">
                    <i class="fas fa-building me-2 text-secondary"></i>@T("nav.companies")
                </a>
                <a asp-controller="Department" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Department" ? "active-link" : "")">
                    <i class="fas fa-sitemap me-2 text-secondary"></i>@T("nav.departments")
                </a>
                <a asp-controller="User" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "User" ? "active-link" : "")">
                   <i class="fas fa-users me-2 text-secondary"></i>@T("nav.users")
                </a>

                <div class="sidebar-subheading text-muted text-uppercase fs-7 px-3 mt-4 mb-2">@T("nav.contentDesign")</div>

                <a asp-controller="Page" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Page" ? "active-link" : "")">
                    <i class="fas fa-desktop me-2 text-success"></i>@T("nav.pages")
                </a>
                <a asp-controller="Layout" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Layout" ? "active-link" : "")">
                    <i class="fas fa-th-large me-2 text-warning"></i>@T("nav.layouts")
                </a>
                <a asp-controller="Content" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Content" ? "active-link" : "")">
                    <i class="fas fa-photo-video me-2 text-info"></i>@T("nav.mediaLibrary")
                </a>
                <a asp-controller="Schedule" asp-action="Index" class="list-group-item list-group-item-action list-group-item-light p-3 border-0 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Schedule" ? "active-link" : "")">
                    <i class="fas fa-calendar-alt me-2 text-danger"></i>@T("nav.schedules")
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3 px-4 shadow-sm">
                <button class="btn btn-light" id="sidebarToggle"><i class="fas fa-bars"></i></button>
 
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">

                        <!-- Language Switcher -->
                        <li class="nav-item dropdown me-3">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-globe me-1 text-primary"></i>
                                <span class="fw-medium">@(langNames.ContainsKey(locale) ? langNames[locale] : locale)</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow-sm border-0" aria-labelledby="languageDropdown" style="min-width: 160px;">
                                <h6 class="dropdown-header text-uppercase fs-7"><i class="fas fa-language me-1"></i> @T("language.title")</h6>
                                <div class="dropdown-divider"></div>
                                @if (supportedLangs != null)
                                {
                                    @foreach (var l in supportedLangs)
                                    {
                                        var isActive = l == locale;
                                        var flag = langFlags.ContainsKey(l) ? langFlags[l] : "🌐";
                                        var name = langNames.ContainsKey(l) ? langNames[l] : l;
                                        <a asp-controller="Language" asp-action="Change" asp-route-locale="@l" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                                           class="dropdown-item d-flex align-items-center py-2 @(isActive ? "active" : "")">
                                            <span class="me-2" style="font-size: 1.2rem;">@flag</span>
                                            <span>@name</span>
                                            @if (isActive)
                                            {
                                                <i class="fas fa-check ms-auto text-success small"></i>
                                            }
                                        </a>
                                    }
                                }
                            </div>
                        </li>

                         <!-- Company Selector Dropdown -->
                        @await Component.InvokeAsync("CompanySelector")

                        <!-- User Profile -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user-circle fs-4 me-2 text-secondary"></i>
                                <span>@(User.Identity?.Name ?? "User")</span>
                                @if (User.FindFirst("IsSystemAdmin")?.Value == "True")
                                {
                                    <span class="badge bg-danger ms-2 small">Admin</span>
                                }
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="navbarDropdown">
                                <h6 class="dropdown-header">
                                    <i class="fas fa-user me-1"></i> @(User.Identity?.Name ?? "User")
                                </h6>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user-circle me-2"></i>@T("nav.profile")
                                </a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                                    <i class="fas fa-cog me-2"></i>@T("nav.settings")
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>@T("auth.logout")
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid px-4 py-4">
                <!-- Breadcrumb Navigation -->
                @await Component.InvokeAsync("Breadcrumb")

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @RenderBody()
            </div>
            
             <footer class="mt-auto py-3 bg-white text-center text-muted border-top fs-7">
                <div class="container-fluid">
                   @T("common.copyright")
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Aktif dil bilgisi JS tarafına aktarılıyor
        window.__locale = '@locale';

        $("#sidebarToggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    <script src="~/js/table-features.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
