@model ErrorViewModel
@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("error.title");
}

<h1 class="text-danger">@T("error.heading")</h1>
<h2 class="text-danger">@T("error.message")</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@T("error.requestId"):</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@T("error.devMode")</h3>
<p>
    @T("error.devModeDesc")
</p>
<p>
    <strong>@T("error.devModeWarning")</strong>
    @T("error.devModeDetails")
</p>
