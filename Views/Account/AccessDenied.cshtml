@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("auth.accessDenied");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="bi bi-exclamation-triangle"></i> @T("auth.accessDenied")</h3>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-shield-lock" style="font-size: 5rem; color: #dc3545;"></i>
                    <h4 class="mt-3">@T("auth.accessDeniedMessage")</h4>
                    <p class="text-muted">
                        @T("auth.contactAdmin")
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> @T("auth.goToHome")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
