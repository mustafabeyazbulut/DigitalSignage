@model DigitalSignage.Models.User
@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("settings.changePasswordTitle");
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>@T("settings.changePasswordTitle")
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        @T("settings.passwordRequirements")
                    </div>

                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>@T("settings.currentPassword")
                            </label>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" required minlength="6" />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">
                                <i class="fas fa-key me-1"></i>@T("settings.newPassword")
                            </label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-1"></i>@T("settings.confirmPassword")
                            </label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Settings" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>@T("common.cancel")
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>@T("settings.changePassword")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
