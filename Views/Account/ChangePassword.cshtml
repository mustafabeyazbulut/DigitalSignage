@model DigitalSignage.Models.User
@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("settings.changePasswordTitle");

    var isAdminChangingPassword = ViewBag.IsAdminChangingPassword as bool? ?? false;
    var returnUrl = ViewBag.ReturnUrl as string;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>
                        @if (isAdminChangingPassword)
                        {
                            <span>@T("user.changePasswordFor"): @Model.UserName</span>
                        }
                        else
                        {
                            <span>@T("settings.changePasswordTitle")</span>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    @if (isAdminChangingPassword)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-user-shield me-2"></i>
                            @T("user.adminChangingPasswordInfo")
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            @T("settings.passwordRequirements")
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@Model.UserID" />
                        @if (!string.IsNullOrEmpty(returnUrl))
                        {
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                        }

                        @if (!isAdminChangingPassword && !string.IsNullOrEmpty(Model.PasswordHash))
                        {
                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">
                                    <i class="fas fa-lock me-1"></i>@T("settings.currentPassword")
                                </label>
                                <input type="password" class="form-control" id="currentPassword" name="currentPassword" required minlength="6" />
                            </div>
                        }
                        else if (!isAdminChangingPassword && string.IsNullOrEmpty(Model.PasswordHash))
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-info-circle me-2"></i>
                                @T("settings.firstTimePasswordInfo")
                            </div>
                        }

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">
                                <i class="fas fa-key me-1"></i>@T("settings.newPassword")
                            </label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-1"></i>@T("settings.confirmPassword")
                            </label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" />
                        </div>

                        <div class="d-flex justify-content-between">
                            @if (isAdminChangingPassword)
                            {
                                <a href="@(returnUrl ?? Url.Action("Index", "User"))" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>@T("common.cancel")
                                </a>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary" data-smart-back="@ViewBag.BreadcrumbBackUrl">
                                    <i class="fas fa-times me-1"></i>@T("common.cancel")
                                </button>
                            }
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>
                                @if (isAdminChangingPassword || string.IsNullOrEmpty(Model.PasswordHash))
                                {
                                    <span>@T("settings.setPassword")</span>
                                }
                                else
                                {
                                    <span>@T("settings.changePassword")</span>
                                }
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
