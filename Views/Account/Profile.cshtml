@using System.Security.Claims
@using DigitalSignage.Extensions

@{
    ViewData["Title"] = "Profile";
    var user = User;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>User Profile</h1>

            <div class="card">
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(user.GetPhotoUrl()))
                            {
                                <img src="@user.GetPhotoUrl()" alt="Profile Photo" class="rounded-circle" style="width: 150px; height: 150px;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px; font-size: 3rem;">
                                    @(user.GetGivenName()?.Substring(0, 1) ?? "U")
                                </div>
                            }
                        </div>

                        <dl class="row">
                            <dt class="col-sm-4">Display Name</dt>
                            <dd class="col-sm-8">@(user.GetDisplayName() ?? "N/A")</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@(user.GetMail() ?? "N/A")</dd>

                            <dt class="col-sm-4">First Name</dt>
                            <dd class="col-sm-8">@(user.GetGivenName() ?? "N/A")</dd>

                            <dt class="col-sm-4">Last Name</dt>
                            <dd class="col-sm-8">@(user.GetSurname() ?? "N/A")</dd>

                            @if (!string.IsNullOrEmpty(user.GetObjectId()))
                            {
                                <dt class="col-sm-4">Object ID</dt>
                                <dd class="col-sm-8"><code>@user.GetObjectId()</code></dd>
                            }

                            @if (!string.IsNullOrEmpty(user.GetTenantId()))
                            {
                                <dt class="col-sm-4">Tenant ID</dt>
                                <dd class="col-sm-8"><code>@user.GetTenantId()</code></dd>
                            }

                            <dt class="col-sm-4">Roles</dt>
                            <dd class="col-sm-8">
                                @{
                                    var roles = user.GetRoles();
                                }
                                @if (roles.Any())
                                {
                                    foreach (var role in roles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No roles assigned</span>
                                }
                            </dd>
                        </dl>

                        <div class="mt-4">
                            <h5>All Claims</h5>
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <thead>
                                        <tr>
                                            <th>Type</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var claim in User.Claims.OrderBy(c => c.Type))
                                        {
                                            <tr>
                                                <td><small>@claim.Type</small></td>
                                                <td><small>@claim.Value</small></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            You are not authenticated. Please <a asp-action="Login">login</a>.
                        </div>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>
</div>
