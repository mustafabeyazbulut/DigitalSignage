@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("nav.settings");
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-cog me-2"></i>@T("nav.settings")
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Settings Page:</strong> User settings and preferences will be available here.
                    </div>

                    <h5 class="mb-3"><i class="fas fa-user me-2"></i>Account Settings</h5>
                    <ul class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-user-circle me-2 text-primary"></i>
                                <strong>Profile</strong>
                                <p class="mb-0 text-muted small">View and edit your profile information</p>
                            </div>
                            <a asp-action="Profile" class="btn btn-sm btn-outline-primary">View</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-key me-2 text-warning"></i>
                                <strong>Change Password</strong>
                                <p class="mb-0 text-muted small">Update your password</p>
                            </div>
                            <button class="btn btn-sm btn-outline-warning" disabled>Coming Soon</button>
                        </li>
                    </ul>

                    <h5 class="mb-3"><i class="fas fa-bell me-2"></i>Notifications</h5>
                    <ul class="list-group mb-4">
                        <li class="list-group-item">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="emailNotifications" checked disabled>
                                <label class="form-check-label" for="emailNotifications">
                                    Email Notifications
                                </label>
                                <p class="mb-0 text-muted small">Receive email notifications for important updates</p>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="browserNotifications" disabled>
                                <label class="form-check-label" for="browserNotifications">
                                    Browser Notifications
                                </label>
                                <p class="mb-0 text-muted small">Show desktop notifications</p>
                            </div>
                        </li>
                    </ul>

                    <h5 class="mb-3"><i class="fas fa-globe me-2"></i>Language & Region</h5>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-language me-2 text-info"></i>
                                <strong>Current Language</strong>
                                <p class="mb-0 text-muted small">@locale (Use the language switcher in the top menu)</p>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>@T("common.back")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
