@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.OpenIdConnect
@using System.Globalization
@using Microsoft.AspNetCore.Localization

@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap / Sign In";
    var returnUrl = ViewData["ReturnUrl"] as string;
    
    // Dil desteği simülasyonu (Backend entegrasyonu ayrıca yapılmalı)
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
}

<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Digital Signage Enterprise</title>
    <!-- Modern Font: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        :root {
            --bg-dark: #111827;
            --bg-card: #1f2937;
            --text-primary: #f9fafb;
            --text-secondary: #9ca3af;
            --accent: #3b82f6; /* Blue-500 */
            --accent-hover: #2563eb; /* Blue-600 */
            --input-bg: #374151;
            --border-color: #4b5563;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-dark);
            color: var(--text-primary);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            overflow: hidden;
            background-image: radial-gradient(circle at top right, #1e3a8a 0%, transparent 40%),
                              radial-gradient(circle at bottom left, #312e81 0%, transparent 40%);
        }

        .login-wrapper {
            background-color: rgba(31, 41, 55, 0.7);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            padding: 50px;
            width: 440px;
            position: relative;
        }

        .lang-switch {
            position: absolute;
            top: 20px;
            right: 20px;
        }
        
        .lang-btn {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-secondary);
            padding: 5px 10px;
            border-radius: 8px;
            font-size: 0.8rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: all 0.2s;
        }
        
        .lang-btn:hover {
            color: var(--text-primary);
            border-color: var(--text-secondary);
        }

        .logo-area {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            font-size: 3rem;
            background: -webkit-linear-gradient(45deg, #3b82f6, #8b5cf6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .app-title {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .app-subtitle {
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .input-group {
            margin-bottom: 20px;
            position: relative;
        }
        
        .input-label {
            display: block;
            font-size: 0.85rem;
            font-weight: 500;
            margin-bottom: 8px;
            color: var(--text-secondary);
        }

        .form-control {
            width: 100%;
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            color: white;
            padding: 12px 16px;
            border-radius: 10px;
            font-size: 0.95rem;
            box-sizing: border-box; /* Fix padding issues */
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        }

        .btn-primary {
            width: 100%;
            background: linear-gradient(90deg, var(--accent), #2563eb);
            color: white;
            border: none;
            padding: 14px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.1s, opacity 0.2s;
            margin-top: 10px;
        }

        .btn-primary:hover {
            opacity: 0.95;
            transform: translateY(-1px);
        }
        
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 25px 0;
            color: var(--text-secondary);
            font-size: 0.8rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid var(--border-color);
        }
        
        .divider span {
            padding: 0 10px;
        }

        .btn-sso {
            width: 100%;
            background-color: white;
            color: #333;
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            cursor: pointer;
            transition: background 0.2s;
        }
        
        .btn-sso:hover {
            background-color: #f3f4f6;
        }

        .alert-error {
            background-color: rgba(220, 38, 38, 0.1);
            border: 1px solid rgba(220, 38, 38, 0.2);
            color: #fca5a5;
            padding: 10px;
            border-radius: 8px;
            font-size: 0.9rem;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        /* Language Dropdown (Simple implementation) */
        .dropdown-menu {
            display: none;
            position: absolute;
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            padding: 5px;
            border-radius: 8px;
            right: 0;
            top: 100%;
            margin-top: 5px;
            min-width: 120px;
            z-index: 100;
        }
        
        .lang-switch:hover .dropdown-menu {
            display: block;
        }
        
        .dropdown-item {
            color: var(--text-secondary);
            padding: 8px 12px;
            display: block;
            text-decoration: none;
            border-radius: 5px;
            font-size: 0.9rem;
        }
        
        .dropdown-item:hover {
            background: var(--input-bg);
            color: white;
        }
    </style>
</head>
<body>

    <div class="login-wrapper">
        <!-- Language Switcher -->
        <div class="lang-switch">
            <button class="lang-btn">
                <i class="fas fa-globe"></i> English <i class="fas fa-chevron-down ms-1" style="font-size: 0.7em;"></i>
            </button>
            <div class="dropdown-menu">
                <a href="?culture=en-US" class="dropdown-item">English (US)</a>
                <a href="?culture=tr-TR" class="dropdown-item">Türkçe (TR)</a>
                <a href="?culture=de-DE" class="dropdown-item">Deutsch (DE)</a>
            </div>
        </div>

        <div class="logo-area">
            <div class="logo-icon"><i class="fas fa-bolt"></i></div>
            <div class="app-title">Digital Signage OS</div>
            <div class="app-subtitle">Enterprise Display Management</div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-error">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="Login" asp-controller="Account">
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            
            <div class="input-group">
                <label class="input-label">Corporate Email / Username</label>
                <input type="text" name="userName" class="form-control" placeholder="user@domain.com" required autofocus />
            </div>

            <div class="input-group">
                <label class="input-label">Password</label>
                <input type="password" name="password" class="form-control" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn-primary">
                Secure Login
            </button>
        </form>

        <div class="divider">
            <span>OR ACCESS WITH</span>
        </div>

        <button type="button" class="btn-sso">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 23 23"><path fill="#f35325" d="M1 1h10v10H1z"/><path fill="#81bc06" d="M12 1h10v10H12z"/><path fill="#05a6f0" d="M1 12h10v10H1z"/><path fill="#ffba08" d="M12 12h10v10H12z"/></svg>
            Microsoft 365 SSO
        </button>
        
        <div style="text-align: center; margin-top: 25px; color: var(--text-secondary); font-size: 0.8rem;">
            &copy; 2026 Digital Signage Corp. <span style="margin: 0 5px;">•</span> v2.4.0
        </div>
    </div>

</body>
</html>
