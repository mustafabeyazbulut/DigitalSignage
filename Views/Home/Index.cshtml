@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("nav.dashboard");
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="fw-bold text-dark">@T("dashboard.welcomeBack")</h2>
        <p class="text-muted">@T("dashboard.subtitle")</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h6 class="text-uppercase text-muted fw-bold mb-0">@T("dashboard.totalCompanies")</h6>
                    <span class="text-primary"><i class="fas fa-building fa-lg"></i></span>
                </div>
                <h2 class="display-6 fw-bold mb-0">12</h2>
                <small class="text-success"><i class="fas fa-arrow-up"></i> 2 @T("dashboard.newThisMonth")</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h6 class="text-uppercase text-muted fw-bold mb-0">@T("dashboard.activeScreens")</h6>
                    <span class="text-success"><i class="fas fa-desktop fa-lg"></i></span>
                </div>
                <h2 class="display-6 fw-bold mb-0">145</h2>
                <small class="text-success fw-bold">98% @T("dashboard.online")</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-info">
             <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h6 class="text-uppercase text-muted fw-bold mb-0">@T("dashboard.totalContent")</h6>
                    <span class="text-info"><i class="fas fa-photo-video fa-lg"></i></span>
                </div>
                <h2 class="display-6 fw-bold mb-0">850+</h2>
                <small class="text-muted">@T("dashboard.gbUsed"): 1.25</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h6 class="text-uppercase text-muted fw-bold mb-0">@T("dashboard.pendingAlerts")</h6>
                    <span class="text-warning"><i class="fas fa-exclamation-triangle fa-lg"></i></span>
                </div>
                <h2 class="display-6 fw-bold mb-0">3</h2>
                <small class="text-danger">@T("dashboard.actionRequired")</small>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity & Quick Actions -->
<div class="row g-4">
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">@T("dashboard.recentActivity")</h6>
                <a href="#" class="btn btn-sm btn-outline-primary rounded-pill">@T("common.viewAll")</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">@T("dashboard.screenName")</th>
                                <th>@T("dashboard.department")</th>
                                <th>@T("common.status")</th>
                                <th>@T("dashboard.lastPing")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="ps-4 fw-bold">Lobby Main Screen</td>
                                <td>Corporate HQ</td>
                                <td><span class="badge bg-success rounded-pill">@T("dashboard.online")</span></td>
                                <td class="text-muted">2 @T("dashboard.minsAgo")</td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold">Cafeteria Menu Board</td>
                                <td>Operations</td>
                                <td><span class="badge bg-success rounded-pill">@T("dashboard.online")</span></td>
                                <td class="text-muted">5 @T("dashboard.minsAgo")</td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold">HR Hallway Display</td>
                                <td>Human Resources</td>
                                <td><span class="badge bg-warning rounded-pill">@T("dashboard.syncing")</span></td>
                                <td class="text-muted">12 @T("dashboard.minsAgo")</td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold">Warehouse Entry</td>
                                <td>Logistics</td>
                                <td><span class="badge bg-danger rounded-pill">@T("dashboard.offline")</span></td>
                                <td class="text-muted">2 @T("dashboard.hoursAgo")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header bg-white py-3">
                 <h6 class="m-0 fw-bold text-secondary">@T("dashboard.quickActions")</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Content" asp-action="Create" class="btn btn-primary shadow-sm text-start py-3">
                        <i class="fas fa-plus-circle me-3 fa-lg"></i> @T("dashboard.uploadContent")
                    </a>
                    <a asp-controller="Page" asp-action="Create" class="btn btn-outline-secondary shadow-sm text-start py-3">
                        <i class="fas fa-layer-group me-3 fa-lg"></i> @T("dashboard.createPage")
                    </a>
                    <a asp-controller="Schedule" asp-action="Create" class="btn btn-outline-success shadow-sm text-start py-3">
                        <i class="fas fa-clock me-3 fa-lg"></i> @T("dashboard.schedulePlaylist")
                    </a>
                     <a asp-controller="Company" asp-action="Create" class="btn btn-light shadow-sm text-start py-3">
                        <i class="fas fa-building me-3 fa-lg"></i> @T("dashboard.addCompany")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
