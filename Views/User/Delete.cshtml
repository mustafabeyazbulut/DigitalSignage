@model DigitalSignage.ViewModels.UserViewModel

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("user.deleteTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-danger">@T("user.deleteTitle")</h1>

            <div class="alert alert-danger">
                <h4>@T("user.deleteWarning")</h4>
                <p>@T("common.cannotUndo")</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">@T("user.userName")</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">@T("user.email")</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">@T("user.fullName")</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">@T("common.status")</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? T("common.active") : T("common.inactive"))
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="UserID" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> @T("common.confirmDelete")
                </button>
                <a asp-action="Details" asp-route-id="@Model.UserID" class="btn btn-secondary">@T("common.cancel")</a>
            </form>
        </div>
    </div>
</div>
