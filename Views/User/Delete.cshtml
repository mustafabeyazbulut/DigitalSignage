@model DigitalSignage.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-danger">Delete User</h1>

            <div class="alert alert-danger">
                <h4>Are you sure you want to delete this user?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">User Name</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @Model.StatusText
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="UserID" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Details" asp-route-id="@Model.UserID" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
