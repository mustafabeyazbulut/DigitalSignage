@model DigitalSignage.DTOs.CreateUserDTO

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("user.createTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@T("user.createTitle")</h1>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">@T("user.userName")</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">@T("user.email")</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">@T("user.password")</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="form-text">@T("user.passwordHelp")</div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">@T("user.firstName")</label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">@T("user.lastName")</label>
                            <input asp-for="LastName" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsOffice365User" class="form-check-input" />
                    <label asp-for="IsOffice365User" class="form-check-label">@T("user.isOffice365User")</label>
                </div>

                <div class="mb-3" id="azureAdSection" style="display: none;">
                    <label asp-for="AzureADObjectId" class="form-label">@T("user.azureObjectId")</label>
                    <input asp-for="AzureADObjectId" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@T("common.create")</button>
                    <a asp-action="Index" class="btn btn-secondary">@T("common.cancel")</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('IsOffice365User').addEventListener('change', function() {
            document.getElementById('azureAdSection').style.display = this.checked ? 'block' : 'none';
            document.querySelector('[name="Password"]').required = !this.checked;
        });
    </script>
}
