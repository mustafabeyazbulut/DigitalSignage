@model DigitalSignage.ViewModels.UserViewModel

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("user.detailsTitle");
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@T("user.detailsTitle")</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-warning">
                <i class="bi bi-pencil"></i> @T("common.edit")
            </a>
            <a asp-action="Delete" asp-route-id="@Model.UserID" class="btn btn-danger">
                <i class="bi bi-trash"></i> @T("common.delete")
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@T("user.userName")</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">@T("user.email")</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">@T("user.fullName")</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">@T("common.status")</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ? T("common.active") : T("common.inactive"))
                    </span>
                </dd>

                <dt class="col-sm-3">@T("user.isSystemAdmin")</dt>
                <dd class="col-sm-9">
                    @if (Model.IsSystemAdmin)
                    {
                        <span class="badge bg-danger">@T("common.yes")</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@T("common.no")</span>
                    }
                </dd>

                <dt class="col-sm-3">@T("user.authenticationType")</dt>
                <dd class="col-sm-9">
                    @if (Model.IsOffice365User)
                    {
                        <span class="badge bg-info">@T("user.office365")</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@T("user.local")</span>
                    }
                </dd>

                <dt class="col-sm-3">@T("common.createdDate")</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>

                @if (Model.LastLoginDate.HasValue)
                {
                    <dt class="col-sm-3">@T("user.lastLogin")</dt>
                    <dd class="col-sm-9">@Model.LastLoginDate.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                }
            </dl>
        </div>
    </div>

    @if (!Model.IsOffice365User)
    {
        <div class="card mt-3">
            <div class="card-header">
                <h5>@T("user.changePassword")</h5>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" method="post">
                    <input type="hidden" name="id" value="@Model.UserID" />
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">@T("user.currentPassword")</label>
                        <input type="password" class="form-control" id="currentPassword" name="currentPassword" required />
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">@T("user.newPassword")</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" />
                    </div>
                    <button type="submit" class="btn btn-primary">@T("user.changePassword")</button>
                </form>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">@T("common.backToList")</a>
    </div>
</div>
