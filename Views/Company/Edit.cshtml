@model DigitalSignage.Models.Company

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("company.editTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@T("company.editTitle")</h1>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="CompanyID" />
                <input type="hidden" asp-for="LogoPath" />
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="CompanyName" class="form-label">@T("company.companyName")</label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmailDomain" class="form-label">@T("company.emailDomain")</label>
                    <input asp-for="EmailDomain" class="form-control" />
                    <span asp-validation-for="EmailDomain" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">@T("company.description")</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">@T("company.currentLogo")</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <img src="/media/@Model.LogoPath" alt="@Model.CompanyName Logo" class="img-thumbnail" style="max-height: 120px;" />
                        }
                        else
                        {
                            <span class="text-muted">@T("common.noLogo")</span>
                        }
                    </div>
                    <label class="form-label">@T("company.changeLogo")</label>
                    <input type="file" name="logoFile" class="form-control" accept="image/*" />
                    <div class="form-text">@T("company.logoHelp")</div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">@T("company.activeStatus")</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@T("common.update")</button>
                    <button type="button" class="btn btn-secondary" data-smart-back="@ViewBag.BreadcrumbBackUrl">
                        <i class="bi bi-arrow-left"></i> @T("common.cancel")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
