@model DigitalSignage.Models.Company

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("company.editTitle");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@T("company.editTitle")</h1>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="CompanyID" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="CompanyName" class="form-label"></label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CompanyCode" class="form-label"></label>
                    <input asp-for="CompanyCode" class="form-control" readonly />
                    <div class="form-text">@T("company.companyCodeHelp")</div>
                </div>

                <div class="mb-3">
                    <label asp-for="EmailDomain" class="form-label"></label>
                    <input asp-for="EmailDomain" class="form-control" />
                    <span asp-validation-for="EmailDomain" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PrimaryColor" class="form-label"></label>
                            <input asp-for="PrimaryColor" type="color" class="form-control form-control-color" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SecondaryColor" class="form-label"></label>
                            <input asp-for="SecondaryColor" type="color" class="form-control form-control-color" />
                        </div>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@T("common.update")</button>
                    <a asp-action="Details" asp-route-id="@Model.CompanyID" class="btn btn-secondary">@T("common.cancel")</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
