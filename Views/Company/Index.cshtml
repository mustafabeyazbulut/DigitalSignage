@model IEnumerable<DigitalSignage.Models.Company>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("company.title");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@T("company.title")</h2>
        <p class="text-muted mb-0">@T("company.subtitle")</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus me-2"></i> @T("company.newCompany")
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4" style="width: 50px;">@T("company.logo")</th>
                        <th>@T("company.companyName")</th>
                        <th>@T("company.companyCode")</th>
                        <th>@T("company.domain")</th>
                        <th>@T("common.status")</th>
                        <th class="text-end pe-4">@T("common.actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="bg-light rounded d-flex align-items-center justify-content-center border" style="width: 40px; height: 40px;">
                                    @if(string.IsNullOrEmpty(item.LogoUrl))
                                    {
                                        <i class="fas fa-building text-secondary"></i>
                                    }
                                    else
                                    {
                                        <img src="@item.LogoUrl" alt="Logo" class="img-fluid rounded" />
                                    }
                                </div>
                            </td>
                            <td class="fw-bold">@item.CompanyName</td>
                            <td><span class="badge bg-light text-dark border">@item.CompanyCode</span></td>
                            <td>@(item.EmailDomain ?? "-")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">@T("common.active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">@T("common.inactive")</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@item.CompanyID" class="btn btn-sm btn-outline-info btn-icon" title="@T("common.details")">
                                    <i class="fas fa-info"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.CompanyID" class="btn btn-sm btn-outline-warning btn-icon" title="@T("common.edit")">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CompanyID" class="btn btn-sm btn-outline-danger btn-icon" title="@T("common.delete")">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-building fa-3x mb-3 opacity-50"></i>
                                <p>@T("company.noCompanies")</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
