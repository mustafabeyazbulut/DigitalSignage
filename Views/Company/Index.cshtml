@model IEnumerable<DigitalSignage.Models.Company>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("company.title");
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@T("company.title")</h1>
            <p class="text-muted mb-0">@T("company.subtitle")</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @T("company.newCompany")
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>@T("company.logo")</th>
                            <th>@T("company.companyName")</th>
                            <th>@T("company.companyCode")</th>
                            <th>@T("company.domain")</th>
                            <th>@T("common.status")</th>
                            <th>@T("common.actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="company-logo">
                                        @if(string.IsNullOrEmpty(item.LogoUrl))
                                        {
                                            <i class="bi bi-building"></i>
                                        }
                                        else
                                        {
                                            <img src="@item.LogoUrl" alt="@item.CompanyName Logo" />
                                        }
                                    </div>
                                </td>
                                <td>@item.CompanyName</td>
                                <td><code>@item.CompanyCode</code></td>
                                <td>@(item.EmailDomain ?? "-")</td>
                                <td>
                                    <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                        @(item.IsActive ? T("common.active") : T("common.inactive"))
                                    </span>
                                </td>
                                <td class="table-actions">
                                    <div class="action-dropdown">
                                        <button type="button" class="action-dropdown-toggle" title="@T("common.actions")">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="action-dropdown-menu">
                                            <a asp-action="Details" asp-route-id="@item.CompanyID" class="action-dropdown-item action-view">
                                                <i class="bi bi-eye"></i>
                                                <span>@T("common.details")</span>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.CompanyID" asp-route-returnUrl="@Url.Action("Index")" class="action-dropdown-item action-edit">
                                                <i class="bi bi-pencil"></i>
                                                <span>@T("common.edit")</span>
                                            </a>
                                            <div class="action-dropdown-divider"></div>
                                            <a asp-action="Delete" asp-route-id="@item.CompanyID" class="action-dropdown-item action-delete">
                                                <i class="bi bi-trash"></i>
                                                <span>@T("common.delete")</span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="table-empty-state">
            <i class="bi bi-building"></i>
            <h3>@T("company.noCompanies")</h3>
            <p>@T("company.createFirstCompany")</p>
        </div>
    }
</div>
