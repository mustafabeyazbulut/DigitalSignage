@model DigitalSignage.Models.Company

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("company.createTitle");
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">@T("company.createTitle")</h2>
            <button type="button" class="btn btn-outline-secondary" data-smart-back="@ViewBag.BreadcrumbBackUrl">
                <i class="fas fa-arrow-left me-2"></i> @T("common.backToList")
            </button>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <h5 class="text-primary fw-bold mb-3"><i class="fas fa-info-circle me-2"></i> @T("company.basicInfo")</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="CompanyName" class="form-label fw-bold">@T("company.companyName")</label>
                            <input asp-for="CompanyName" class="form-control" placeholder="@T("company.companyNamePlaceholder")" />
                            <span asp-validation-for="CompanyName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label">@T("company.description")</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>

                    <h5 class="text-primary fw-bold mt-4 mb-3"><i class="fas fa-cogs me-2"></i> @T("company.settingsBranding")</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="EmailDomain" class="form-label">@T("company.emailDomain")</label>
                            <div class="input-group">
                                <span class="input-group-text">@@</span>
                                <input asp-for="EmailDomain" class="form-control" placeholder="@T("company.emailDomainPlaceholder")" />
                            </div>
                            <div class="form-text">@T("company.emailDomainHelp")</div>
                            <span asp-validation-for="EmailDomain" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">@T("company.uploadLogo")</label>
                            <input type="file" name="logoFile" class="form-control" accept="image/*" />
                            <div class="form-text">@T("company.logoHelp")</div>
                        </div>
                         <div class="col-md-6 pt-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                <label class="form-check-label fw-bold" asp-for="IsActive">@T("company.activeStatus")</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i> @T("company.createButton")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
