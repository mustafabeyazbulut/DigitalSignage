@model DigitalSignage.Models.Department

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("department.createTitle");
    var companyId = ViewBag.CompanyId as int?;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@T("department.createTitle")</h1>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                @if (companyId.HasValue)
                {
                    <input type="hidden" name="CompanyID" value="@companyId" />
                }
                else
                {
                    <div class="mb-3">
                        <label asp-for="CompanyID" class="form-label fw-bold">@T("department.company")</label>
                        <select asp-for="CompanyID" class="form-select" asp-items="ViewBag.Companies"></select>
                        <span asp-validation-for="CompanyID" class="text-danger"></span>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="DepartmentName" class="form-label fw-bold">@T("department.departmentName")</label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentCode" class="form-label fw-bold">@T("department.code")</label>
                    <input asp-for="DepartmentCode" class="form-control" />
                    <span asp-validation-for="DepartmentCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">@T("company.description")</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> @T("common.create")
                    </button>
                    <button type="button" class="btn btn-secondary" data-smart-back="@ViewBag.BreadcrumbBackUrl">@T("common.cancel")</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
