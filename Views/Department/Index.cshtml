@model IEnumerable<DigitalSignage.Models.Department>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("department.title");

    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var sortBy = ViewBag.SortBy as string ?? "";
    var sortOrder = ViewBag.SortOrder as string ?? "asc";
    var companyId = ViewBag.CompanyId as int?;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@T("department.title")</h1>
            <p class="text-muted mb-0">@T("department.subtitle")</p>
        </div>
        <div class="col-md-4 text-end">
            @if (ViewBag.IsSystemAdmin == true || ViewBag.IsCompanyAdmin == true)
            {
                <a asp-action="Create" class="btn btn-primary" asp-route-companyId="@ViewBag.CompanyId">
                    <i class="bi bi-plus-circle"></i> @T("department.newDepartment")
                </a>
            }
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="@T("common.search")..." value="@searchTerm">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">@T("common.search")</button>
                </div>
                <div class="col-md-2 text-end">
                    @if(companyId != null) {
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">@T("department.showAllCompanies")</a>
                    }
                </div>
                @if(companyId != null) {
                    <input type="hidden" name="companyId" value="@companyId" />
                }
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>
                                <a href="?search=@searchTerm&sortBy=DepartmentName&sortOrder=@(sortBy == "DepartmentName" && sortOrder == "asc" ? "desc" : "asc")@(companyId != null ? $"&companyId={companyId}" : "")" class="text-white text-decoration-none">
                                    @T("department.departmentName")
                                    @if (sortBy == "DepartmentName")
                                    {
                                        <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="?search=@searchTerm&sortBy=DepartmentCode&sortOrder=@(sortBy == "DepartmentCode" && sortOrder == "asc" ? "desc" : "asc")@(companyId != null ? $"&companyId={companyId}" : "")" class="text-white text-decoration-none">
                                    @T("department.code")
                                    @if (sortBy == "DepartmentCode")
                                    {
                                        <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>@T("department.company")</th>
                            <th>@T("common.status")</th>
                            <th>@T("common.actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DepartmentName</td>
                                <td><code>@item.DepartmentCode</code></td>
                                <td>
                                    @if(item.Company != null) {
                                        <span><i class="bi bi-building"></i> @item.Company.CompanyName</span>
                                    } else {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                        @(item.IsActive ? T("common.active") : T("common.inactive"))
                                    </span>
                                </td>
                                <td class="table-actions">
                                    <div class="action-dropdown">
                                        <button type="button" class="action-dropdown-toggle" title="@T("common.actions")">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="action-dropdown-menu">
                                            <a asp-controller="Page" asp-action="Index" asp-route-departmentId="@item.DepartmentID" class="action-dropdown-item action-view">
                                                <i class="bi bi-display"></i>
                                                <span>@T("department.viewPages")</span>
                                            </a>
                                            <div class="action-dropdown-divider"></div>
                                            <a asp-action="Details" asp-route-id="@item.DepartmentID" class="action-dropdown-item action-view">
                                                <i class="bi bi-eye"></i>
                                                <span>@T("common.details")</span>
                                            </a>
                                            @if (ViewBag.IsSystemAdmin == true || ViewBag.IsCompanyAdmin == true)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.DepartmentID" asp-route-returnUrl="@Url.Action("Index")" class="action-dropdown-item action-edit">
                                                    <i class="bi bi-pencil"></i>
                                                    <span>@T("common.edit")</span>
                                                </a>
                                                <div class="action-dropdown-divider"></div>
                                                <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="action-dropdown-item action-delete">
                                                    <i class="bi bi-trash"></i>
                                                    <span>@T("common.delete")</span>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@(currentPage - 1)@(companyId != null ? $"&companyId={companyId}" : "")">
                            @T("common.previous")
                        </a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@i@(companyId != null ? $"&companyId={companyId}" : "")">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?search=@searchTerm&sortBy=@sortBy&sortOrder=@sortOrder&page=@(currentPage + 1)@(companyId != null ? $"&companyId={companyId}" : "")">
                            @T("common.next")
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="table-empty-state">
            <i class="bi bi-diagram-3"></i>
            <h3>@T("department.noDepartments")</h3>
            <p>@T("department.createFirstDepartment")</p>
        </div>
    }
</div>
