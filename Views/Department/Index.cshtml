@model IEnumerable<DigitalSignage.Models.Department>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("department.title");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">@T("department.title")</h2>
        <p class="text-muted mb-0">@T("department.subtitle")</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm" asp-route-companyId="@ViewBag.CompanyId">
        <i class="fas fa-plus me-2"></i> @T("department.newDepartment")
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <div class="row align-items-center">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="@T("department.searchPlaceholder")">
            </div>
            <div class="col-md-8 text-end">
                @if(ViewBag.CompanyId != null) {
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">@T("department.showAllCompanies")</a>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">@T("department.departmentName")</th>
                        <th>@T("department.code")</th>
                        <th>@T("department.company")</th>
                        <th>@T("common.status")</th>
                        <th class="text-end pe-4">@T("common.actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.DepartmentName</td>
                            <td><span class="badge bg-light text-dark border">@item.DepartmentCode</span></td>
                            <td>
                                @if(item.Company != null) {
                                    <span class="text-primary"><i class="fas fa-building me-1 small"></i> @item.Company.CompanyName</span>
                                } else {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">@T("common.active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">@T("common.inactive")</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-controller="Page" asp-action="Index" asp-route-departmentId="@item.DepartmentID" class="btn btn-sm btn-outline-primary" title="@T("department.viewPages")">
                                    <i class="fas fa-desktop me-1"></i> @T("department.viewPages")
                                </a>
                                <div class="btn-group ms-2">
                                     <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-warning btn-icon" title="@T("common.edit")">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-danger btn-icon" title="@T("common.delete")">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                     @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-sitemap fa-3x mb-3 opacity-50"></i>
                                <p>@T("department.noDepartments")</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
