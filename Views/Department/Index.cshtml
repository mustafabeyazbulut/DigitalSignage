@model IEnumerable<DigitalSignage.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">Departments</h2>
        <p class="text-muted mb-0">Organize screens and content by departments.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm" asp-route-companyId="@ViewBag.CompanyId">
        <i class="fas fa-plus me-2"></i> New Department
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <div class="row align-items-center">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Search departments...">
            </div>
            <div class="col-md-8 text-end">
                @if(ViewBag.CompanyId != null) {
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Show All Companies</a>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Department Name</th>
                        <th>Code</th>
                        <th>Company</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.DepartmentName</td>
                            <td><span class="badge bg-light text-dark border">@item.DepartmentCode</span></td>
                            <td>
                                @if(item.Company != null) {
                                    <span class="text-primary"><i class="fas fa-building me-1 small"></i> @item.Company.CompanyName</span>
                                } else {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">Inactive</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-controller="Page" asp-action="Index" asp-route-departmentId="@item.DepartmentID" class="btn btn-sm btn-outline-primary" title="View Pages">
                                    <i class="fas fa-desktop me-1"></i> Pages
                                </a>
                                <div class="btn-group ms-2">
                                     <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-warning btn-icon" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-danger btn-icon" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                     @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-sitemap fa-3x mb-3 opacity-50"></i>
                                <p>No departments found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
