@model IEnumerable<DigitalSignage.Models.Department>

@{
    var locale = ViewBag.CurrentLocale as string ?? "en";
    var lang = ViewBag.Lang as DigitalSignage.Services.ILanguageService;
    string T(string key) => lang?.Get(locale, key) ?? key;
    ViewData["Title"] = T("department.title");
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@T("department.title")</h1>
            <p class="text-muted mb-0">@T("department.subtitle")</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary" asp-route-companyId="@ViewBag.CompanyId">
                <i class="bi bi-plus-circle"></i> @T("department.newDepartment")
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="@T("department.searchPlaceholder")">
                </div>
                <div class="col-md-8 text-end">
                    @if(ViewBag.CompanyId != null) {
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">@T("department.showAllCompanies")</a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>@T("department.departmentName")</th>
                            <th>@T("department.code")</th>
                            <th>@T("department.company")</th>
                            <th>@T("common.status")</th>
                            <th>@T("common.actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DepartmentName</td>
                                <td><code>@item.DepartmentCode</code></td>
                                <td>
                                    @if(item.Company != null) {
                                        <span><i class="bi bi-building"></i> @item.Company.CompanyName</span>
                                    } else {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                        @(item.IsActive ? T("common.active") : T("common.inactive"))
                                    </span>
                                </td>
                                <td class="table-actions">
                                    <div class="action-dropdown">
                                        <button type="button" class="action-dropdown-toggle" title="@T("common.actions")">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <div class="action-dropdown-menu">
                                            <a asp-controller="Page" asp-action="Index" asp-route-departmentId="@item.DepartmentID" class="action-dropdown-item action-view">
                                                <i class="bi bi-display"></i>
                                                <span>@T("department.viewPages")</span>
                                            </a>
                                            <div class="action-dropdown-divider"></div>
                                            <a asp-action="Details" asp-route-id="@item.DepartmentID" class="action-dropdown-item action-view">
                                                <i class="bi bi-eye"></i>
                                                <span>@T("common.details")</span>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.DepartmentID" asp-route-returnUrl="@Url.Action("Index")" class="action-dropdown-item action-edit">
                                                <i class="bi bi-pencil"></i>
                                                <span>@T("common.edit")</span>
                                            </a>
                                            <div class="action-dropdown-divider"></div>
                                            <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="action-dropdown-item action-delete">
                                                <i class="bi bi-trash"></i>
                                                <span>@T("common.delete")</span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="table-empty-state">
            <i class="bi bi-diagram-3"></i>
            <h3>@T("department.noDepartments")</h3>
            <p>@T("department.createFirstDepartment")</p>
        </div>
    }
</div>
